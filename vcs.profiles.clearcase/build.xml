<project name="vcsgeneric/profiles/clearcase" default="netbeans" basedir=".">
  <import file="../../../nbbuild/default.xml"/>

  <property name="nbroot1" value="../../.."/>
  <property name="nbext1" value="${nbroot1}/nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file1" value="${nbroot1}/nbbuild/standard-nbm-license.txt"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext1}/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nbroot1}/nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext1}/nbantext.jar"/>
  <taskdef name="createmodulexml" classname="org.netbeans.nbbuild.CreateModuleXML" classpath="${nb_all}/nbbuild/nbantext.jar"/>

  <target name="init" depends="default.init">
    <patternset id="vcsgeneric/profiles/clearcase.files">
      <include name="${nb.modules.dir}/clearcase-profile.jar"/>
    </patternset>
    <path id="cp">
      <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
      <pathelement location="${openidex.dir}/${nb.modules.dir}/org-openidex-util.jar"/>
      <pathelement location="${vcscore.dir}/${nb.modules.dir}/org-netbeans-modules-vcscore.jar"/>
      <pathelement location="${vcsgeneric.dir}/${nb.modules.dir}/vcsgen.jar"/>
      <pathelement location="${diff.dir}/${nb.modules.dir}/org-netbeans-modules-diff.jar"/>
    </path>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="src" 
        deprecation="${build.compiler.deprecation}" 
        debug="${build.compiler.debug}"
        source="1.4"
        destdir="src">
      <classpath refID="cp"/>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/clearcase-profile.jar"
         manifest="manifest-subst.mf"
         basedir="src"
         excludesfile="${nbroot1}/nbbuild/standard-jar-excludes.txt"
	 compress="${build.package.compress}">
    </jar>
    <createmodulexml xmldir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules">
      <enabled dir="${netbeans.dest.dir}/${cluster.dir}">
        <include name="${nb.modules.dir}/clearcase-profile.jar"/>
      </enabled>
    </createmodulexml>
  </target>

  <target name="netbeans" depends="jars">
    <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules.dir}/clearcase-profile.jar">
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="vcsgeneric/profiles/clearcase.files"/>
      </fileset>
    </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="clearcase-profile.nbm"
             productdir="${netbeans.dest.dir}/${cluster.dir}"
             module="${nb.modules.dir}/clearcase-profile.jar"
	     homepage="http://vcsgeneric.${homepage.base}/"
	     distribution="http://${dist.base}/clearcase-profile.nbm">
      <license file="${license.file1}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean" depends="init">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
        <include name="org/netbeans/modules/vcs/profiles/clearcase/layer-include*.xml"/>
      </fileset>
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="vcsgeneric/profiles/clearcase.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="clearcase-profile.nbm"/>
  </target>

</project>
