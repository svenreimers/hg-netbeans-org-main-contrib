<project name="vcsgeneric/profiles/clearcase" default="netbeans" basedir=".">

  <property name="nbroot1" value="../../.."/>
  <property name="nbext1" value="${nbroot1}/nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file1" value="${nbroot1}/nbbuild/standard-nbm-license.txt"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext1}/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nbroot1}/nbbuild/nbantext.jar"/>
  <!-- <taskdef name="tojar" classname="org.netbeans.nbbuild.ToJar" classpath="${nbext1}/nbantext.jar"/> -->
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext1}/nbantext.jar"/>
  <taskdef name="makelayer" classname="org.netbeans.nbbuild.MakeLayer" classpath="${nbext1}/nbantext.jar"/>

  <target name="compile">
    <javac srcdir="src" 
        deprecation="${build.compiler.deprecation}" 
        debug="${build.compiler.debug}"
        destdir="src">
      <classpath>        
	<pathelement location="${nbroot1}/openide/openide-13javac-workaround.jar"/>
        <fileset dir="${nbroot1}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
	<pathelement location="${nbroot1}/openidex/netbeans/modules/autoload/openidex.jar"/>
	<pathelement location="${nbroot1}/vcscore/netbeans/modules/autoload/vcscore.jar"/>
	<pathelement location="${nbroot1}/vcsgeneric/netbeans/modules/vcsgen.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/profiles/clearcase/layer-includes-config.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/clearcase/config/*.*"/>
       <exclude name="org/netbeans/modules/vcs/profiles/clearcase/config/*_ja.*"/>
       <exclude name="org/netbeans/modules/vcs/profiles/clearcase/config/*_XX.*"/>
       <exclude name="org/netbeans/modules/vcs/profiles/clearcase/config/.nbattrs"/>
       <exclude name="org/netbeans/modules/vcs/profiles/clearcase/config/Bundle.properties"/>
       <exclude name="org/netbeans/modules/vcs/profiles/clearcase/config/Bundle_*.properties"/>
    </makelayer>
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/profiles/clearcase/layer-includes-configRB.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/clearcase/config/Bundle.properties"/>
       <include name="org/netbeans/modules/vcs/profiles/clearcase/config/Bundle_*.properties"/>
    </makelayer>
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/profiles/clearcase/layer-includes-list.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/clearcase/list/*.class"/>
       <include name="org/netbeans/modules/vcs/profiles/clearcase/list/*.java"/>
       <include name="org/netbeans/modules/vcs/profiles/clearcase/list/*.properties"/>
    </makelayer>
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/clearcase-profile.jar"
         manifest="manifest-subst.mf"
         basedir="src"
         excludesfile="${nbroot1}/nbbuild/standard-jar-excludes.txt"
	 excludes="org/netbeans/modules/vcs/profiles/clearcase/mf-layer_XX.xml"
         compress="false">
      <locale name="ja"/>
      <fileset dir="src/" excludesfile="${nbroot1}/nbbuild/standard-jar-excludes.txt">
        <include name="**/*"/>
	<exclude name="org/netbeans/modules/vcs/profiles/clearcase/config/*_XX.*"/>
      </fileset>
      <fileset dir="src/">
        <include name="**/*.java"/>
        <include name="**/*.form"/>
      </fileset>
    </locjar>
  </target>

  <target name="netbeans" depends="jars">
    <genlist targetname="nbm" outputfiledir="netbeans"/>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="clearcase-profile.nbm"
             topdir="."
             module="netbeans/modules/clearcase-profile.jar"
	     homepage="http://vcsgeneric.${homepage.base}/"
	     distribution="http://${dist.base}/clearcase-profile.nbm">
      <license file="${license.file1}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
        <include name="org/netbeans/modules/vcs/profiles/clearcase/layer-include*.xml"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="clearcase-profile.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
  </target>

  <target depends="jars" name="install">
   <nbinstaller action="reinstall" module="netbeans/modules/clearcase-profile.jar"/>
  </target>

</project>
