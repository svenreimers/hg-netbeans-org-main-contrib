<project name="rmi" default="netbeans" basedir=".">

  <property name="nbroot" value=".."/>
  <property name="nbext" value="${nbroot}/nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>

  <taskdef name="jhindexer" classname="org.netbeans.nbbuild.JHIndexer" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>

  <target name="precompile">
    <javac srcdir="libsrc" destdir="libsrc" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath /> 
    </javac>
  </target>

  <target name="precompile-rmic" depends="precompile">
    <rmic base="libsrc" classname="org.netbeans.rmi.RMIDWrapperImpl">
      <classpath>
        <pathelement path="libsrc" />
      </classpath> 
    </rmic>
  </target>

  <target name="setup-jdkhome-1">
    <!-- Note: user-configured -Djavahome=... will always override this: -->
    <property name="javahome" location="${java.home}"/>
    <available property="javahome-valid" file="${javahome}/lib/tools.jar"/>
  </target>
  <target name="setup-jdkhome-2" depends="setup-jdkhome-1" if="javahome-valid">
    <property name="jdkhome" value="${javahome}"/>
    <property name="jdkhome-valid" value="true"/>
  </target>
  <target name="setup-jdkhome-3" depends="setup-jdkhome-1" unless="javahome-valid">
    <property name="jdkhome" location="${javahome}/.."/>
    <available property="jdkhome-valid" file="${jdkhome}/lib/tools.jar"/>
  </target>
  <target name="setup-jdkhome" depends="setup-jdkhome-2,setup-jdkhome-3" unless="jdkhome-valid">
    <fail message="No tools.jar found in ${javahome}! Set -Djavahome=... as needed."/>
  </target>
    
  <target name="compile" depends="precompile-rmic,setup-jdkhome">
  <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="libsrc"/>
        <pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>
        <pathelement location="${nbroot}/openide/deprecated/netbeans/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
        <pathelement location="${nbroot}/openide/compiler/netbeans/modules/autoload/openide-compiler.jar"/>
        <pathelement location="${nbroot}/openide/execution/netbeans/modules/autoload/openide-execution.jar"/>
        <pathelement location="${nbroot}/java/srcmodel/netbeans/modules/autoload/java-src-model.jar"/>
	<pathelement location="${nbroot}/java/netbeans/modules/java.jar"/>
	<pathelement location="${nbroot}/debuggercore/netbeans/modules/autoload/debuggerCore.jar"/>
        <!-- Hopefully set up by nbbuild/build.xml: -->
        <pathelement location="${jdkhome}/lib/tools.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/rmi.jar"
         manifest="manifest-subst.mf"
         basedir="src"
	 excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
	 compress="false">
      <locale name="ja"/>
    </locjar>
    <mkdir dir="netbeans/lib/ext"/>
    <locjar jarfile="netbeans/lib/ext/rmi-ext.jar"
         basedir="libsrc"
	 excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
	 compress="false">
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="release">
    <copy todir="netbeans">
      <fileset dir="release" excludesfile="../nbbuild/standard-jar-excludes.txt"/>
    </copy>
  </target>

  <target name="netbeans" depends="jars,release,javahelp">
    <genlist targetname="nbm" outputfiledir="netbeans"/>
  </target>

  <target name="javahelp">
    <mkdir dir="javahelp/org/netbeans/modules/rmi/docs/JavaHelpSearch2"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/rmi/docs/"
               db="javahelp/org/netbeans/modules/rmi/docs/JavaHelpSearch2"
               jhall="..//nbbuild/external/jhall-1.1.2_02.jar">
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch2/"/>
      <exclude name="ja/"/>
      <exclude name="credits.html"/>
    </jhindexer>
<!--    <mkdir dir="javahelp/org/netbeans/modules/rmi/docs/ja/JavaHelpSearch2"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/rmi/docs/"
               db="javahelp/org/netbeans/modules/rmi/docs/ja/JavaHelpSearch2"
               locale="ja"
               jhall="../nbbuild/external/jhall-1.1.2_02.jar">
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch2/"/>
      <exclude name="ja/JavaHelpSearch2/"/>
      <exclude name="credits.html"/>
    </jhindexer>-->
    <mkdir dir="javahelp/org/netbeans/modules/usersguide"/>
    <copy file="${nbroot}/usersguide/javahelp/org/netbeans/modules/usersguide/ide.css" tofile="javahelp/org/netbeans/modules/usersguide/ide.css"/>
    <mkdir dir="netbeans/modules/docs"/>
    <locjar jarfile="netbeans/modules/docs/rmi.jar" compress="true">
        <fileset dir="javahelp" excludesfile="${nbext}/standard-jar-excludes.txt" excludes="org/netbeans/modules/usersguide/"/>
	<locale name="ja"/>
    </locjar>
  </target>


  <target name="nbm" depends="netbeans">
    <makenbm file="rmi.nbm"
             topdir="."
             module="netbeans/modules/rmi.jar"
	     homepage="http://rmi.${homepage.base}"
	     distribution="http://${dist.base}/rmi.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>	
      <fileset dir="libsrc">
        <include name="**/*.class"/>        
      </fileset>	
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="rmi.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="javadoc"/>
    <delete dir="Info"/>
    <delete dir="javahelp/org/netbeans/modules/rmi/docs/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/rmi/docs/ja/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/usersguide"/>
  </target>

  <target name="javadoc" depends="compile" description="Build rmi module API documentation.">
    <tstamp/>
    <property name="apis-footer" value="&lt;font size=-2 color=gray&gt;Built on ${TODAY}.&amp;nbsp;&amp;nbsp;|&amp;nbsp;&amp;nbsp;Portions Copyright 1997-2002 Sun Microsystems, Inc. All rights reserved.&lt;/font&gt;"/>
    <echo message="Build rmi module API documentation..."/>
    <mkdir dir="javadoc"/>
    <javadoc destdir="javadoc"
             packagenames="org.netbeans.modules.*"
             doctitle="NetBeans rmi module APIs"
             windowtitle="NetBeans rmi module APIs"
             bottom="${apis-footer}"
             use="true"
             splitindex="true"
             author="false"
             version="false"
             maxmemory="384m"
    >
      <sourcepath>
        <pathelement location="src"/>
        <pathelement location="libsrc"/>
      </sourcepath>
      <classpath>
        <pathelement location="libsrc"/>
        <pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <!--<pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>-->
        <fileset dir="${nbroot}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
	<pathelement location="${nbroot}/java/netbeans/modules/java.jar"/>
	<pathelement location="${nbroot}/debuggercore/netbeans/modules/autoload/debuggerCore.jar"/>
        <!-- Hopefully set up by nbbuild/build.xml: -->
        <pathelement location="${jdkhome}/lib/tools.jar"/>
      </classpath>
    </javadoc>    
  </target>

</project>



