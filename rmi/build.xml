<project name="rmi" default="netbeans" basedir=".">

  <property name="nbroot" value="../../nb_all"/>
  <property name="f4jroot" value=".."/>
  <property name="nbext" value="${nbroot}/nbbuild"/>

  <taskdef name="jhindexer" classname="org.netbeans.nbbuild.JHIndexer" classpath="${nbroot}/nbbuild/nbantext.jar"/>
  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="tojar" classname="org.netbeans.nbbuild.ToJar" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>

  <target name="precompile">
    <javac srcdir="libsrc" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath /> 
    </javac>
  </target>

  <target name="precompile-rmic" depends="precompile">
    <rmic base="libsrc" classname="org.netbeans.rmi.RMIDWrapperImpl">
      <classpath>
        <pathelement path="libsrc" />
      </classpath> 
    </rmic>
  </target>
  
  <target name="compile" depends="precompile-rmic">
  <javac srcdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="libsrc"/>
        <pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <!--<pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>-->
        <fileset dir="${nbroot}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
	<pathelement location="${nbroot}/openidex/netbeans/lib/ext/openidex.jar"/>
	<pathelement location="${nbroot}/java/netbeans/modules/java.jar"/>
	<pathelement location="${nbroot}/debuggercore/netbeans/modules/debuggerCore.jar"/>
      </classpath>
    </javac>
  </target>

  <!--target name="tojar">
    <tojar srcdir="src" unpackeddir="tojar"/>
  </target-->

  <target name="jars" depends="compile">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/rmi.jar"
         manifest="manifest-subst.mf"
         basedir="src"
	 excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
	 compress="false">
      <locale name="ja"/>
      <branding name="f4j"/>
      <branding name="f4j_ce"/>
      <branding name="f4j_ie"/>	 
    </locjar>
    <mkdir dir="netbeans/lib/ext"/>
    <jar jarfile="netbeans/lib/ext/rmi-ext.jar"
         basedir="libsrc"
	 excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
	 compress="false"/>
  </target>

  <target name="release">
    <copy todir="netbeans">
      <fileset dir="release"/>
    </copy>
  </target>

  <target name="javahelp">
    <mkdir dir="javahelp/org/netbeans/modules/rmi/docs/JavaHelpSearch"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/rmi/docs/"
               db="javahelp/org/netbeans/modules/rmi/docs/JavaHelpSearch"
               jhall="${binroot}/nbbuild/lib/jhall.jar">
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch/"/>
      <exclude name="credits.html"/>
    </jhindexer>
    <copy todir="netbeans/docs">
      <fileset dir="javahelp"/>
    </copy>
  </target>

  <target name="netbeans" depends="jars,release,javahelp"/>

  <target name="nbm" depends="netbeans">
    <makenbm file="rmi.nbm"
             topdir="."
	     manifest="manifest-subst.mf"
	     homepage="http://${homepage.base}/rmi.html"
	     distribution="${dist.base}/rmi.nbm">
      <license file="${f4jroot}/core/release/LICENSE.txt"/>
      <description>
        RMI module
      </description>
      <signature keystore="${keystore}" storepass="${storepass}" alias="nb_ide"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>	
      <fileset dir="libsrc">
        <include name="**/*.class"/>        
      </fileset>	
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="rmi.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
    <delete dir="javahelp/org/netbeans/modules/rmi/docs/JavaHelpSearch"/>
  </target>

</project>



