<project name="java3d" default="netbeans" basedir=".">

  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>

  <target name="compile">
    <ant dir="J3dEditor_2.0/src" target="compile"/>
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <fileset dir="../openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
       <pathelement location="release/lib/ext/vrml97.jar"/>
       <pathelement location="release/lib/ext/portfolio.jar"/>
       <pathelement location="release/lib/ext/StarfireExt.jar"/>
       <pathelement location="J3dFly_2.0/src"/>
       <pathelement location="J3dEditor_2.0/src"/>
       <pathelement location="../core/netbeans/lib/core.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <ant dir="J3dEditor_2.0/src" target="jars"/>
    <mkdir dir="release/lib/ext"/>
    <copy file="J3dEditor_2.0/lib/j3dedit.jar" tofile="release/lib/ext/j3dedit.jar"/>
    <copy file="J3dFly_2.0/lib/j3dfly-utils.jar" tofile="release/lib/ext/j3dfly-utils.jar"/>
    <copy file="J3dFly_2.0/lib/j3dfly.jar" tofile="release/lib/ext/j3dfly.jar"/>
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../nbbuild/nbantext.jar"/>
    <locjar jarfile="netbeans/modules/java3d.jar"
            manifest="manifest-subst.mf"
            basedir="src"
	    excludesfile="../nbbuild/standard-jar-excludes.txt"
	    compress="false">
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="release">
    <copy todir="netbeans" includeEmptyDirs="false">
      <fileset dir="release"/>
    </copy>
  </target>

  <target name="netbeans" depends="jars,release"/>

  <target name="nbm" depends="netbeans">
    <makenbm file="java3d.nbm"
             topdir="."
	     manifest="manifest-subst.mf"
	     homepage="http://java3D.${homepage.base}/"
	     distribution="http://{dist.base}/java3d.nbm">
      <license file="${license.file}"/>
    </makenbm>
  </target>

  <target name="clean">
  <ant dir="J3dEditor_2.0/src" target="clean"/>
  <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="java3d.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
    <delete file="release/lib/ext/j3dedit.jar"/>
    <delete file="release/lib/ext/j3dfly-utils.jar"/>
    <delete file="release/lib/ext/j3dfly.jar"/>
  </target>

</project>
