<project name="Test a11y module" basedir="." default="all">

    <import file="../../nbbuild/default.xml"/>
    <property file="../../nbbuild/directories.properties"/>

    <path id="codetest.classpath">
        <pathelement location="../../nbbuild/netbeans/extra/modules/org-netbeans-modules-a11y.jar"/>
    </path>
                
    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->
    
    <target name="unit-compiler">
        <buildTests srcDir="unit/src" compileexcludes="**/data/**">
            <classpath refid="codetest.classpath"/>
        </buildTests>
    </target>
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->

    <!-- Executor for a11y tests -->
    <target name="runcodetest_a11y">
        <executeTests pluginName="jvm">
            <classpath refid="codetest.classpath"/>
<!--            <property name="xtest.userdata|a11ytest.log" value="true"/>  -->
        </executeTests>
    </target>
    
</project>
