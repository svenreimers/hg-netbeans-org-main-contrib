<project name="ZipExporter" default="" basedir=".">       
    <target name="zip-project">
        <zip destfile="${target_dir}/${zip_name}.zip"
            basedir="${src_dir}"
            includes="${dir_name}/**"
            excludes="${exclude_list}" />        
    </target>
    
    <target name="mail-zips">
        <mail from="projectpackager@netbeans.org"
            subject="Zipped NetBeans projects"
            message="Your projects are attached. Thank you for using NetBeans."
            tolist="${to_addr}"
            mailhost="${smtp_server}"
            user="${smtp_username}"
            password="${smtp_password}"
            files="${file_list}"
            />
    </target>
    
    <target name="delete-zip">
        <delete file="${file_to_delete}"/>
    </target>
</project>
