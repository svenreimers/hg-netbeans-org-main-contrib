<project name="ZipExporter" default="" basedir=".">
    <target name="zip-project">
        <zip destfile="${target_dir}/${zip_name}.zip"
            basedir="${src_dir}"
            includes="${dir_name}/**"
            excludes="${exclude_list}" />
    </target>

    <target name="mail-zips">
        <mail from="${mail_from}"
            subject="${mail_subject}"
            message="${mail_body}"
            tolist="${to_addr}"
            mailhost="${smtp_server}"
            user="${smtp_username}"
         password="${smtp_password}"
            ssl="${smtp_use_ssl}"
            mailport="${smtp_mailport}"            
            >
            <fileset dir="${target_dir}">
                <include name="${file_list}"/>
            </fileset>
        </mail>
    </target>
    
    <target name="delete-zip">
        <delete file="${file_to_delete}"/>
    </target>
</project>
