<project name="tasklist/checkstyle" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="netbeans-extra" depends="release"/>
    
    <target name="release" depends="build-init">
        <available file="../external/checkstyle-all.jar" property="checkstyle-all.present" />
        <fail unless="checkstyle-all.present" message="Missing library. Read README for proper setup." />
        <available file="../external/checkstyle_checks.xml" property="checkstyle-rule.present" />
        <fail unless="checkstyle-rule.present" message="Missing ruleset. Read README for proper setup."/>
        <mkdir dir="${cluster}/modules/ext"/>
        <copy todir="${cluster}/modules/ext">
            <fileset dir="../external">
                <include name="checkstyle-all.jar"/>
            </fileset>
        </copy>
       <mkdir dir="${cluster}/configs"/>
       <copy todir="${cluster}/configs">
         <fileset dir="../external">
           <include name="checkstyle.xml"/>
         </fileset>
       </copy>
    </target>
    
    <target name="changelog">
        <style in="module-updates.xml" out="../www/updates/tasklist-checkstyle.html" 
            style="../www/updates/updates.xsl"/>
    </target>
    
    <target name="pmd-check">
        <taskdef name="pmd" classname="net.sourceforge.pmd.ant.PMDTask">
            <classpath>
                <fileset dir="C:\Programme\pmd-2.0\lib\">
                    <include name="*.jar"></include>
                </fileset>
            </classpath>
        </taskdef>
        <pmd printtoconsole="true" shortfilenames="true"  
            rulesetfiles="rulesets/imports.xml,
                rulesets/unusedcode.xml,
                rulesets/basic.xml">
            <formatter linkprefix="src/" type="html" tofile="pmd-report.html"/>
            <fileset dir="src">
                <include name="**/*.java"/>
            </fileset>
        </pmd>
    </target>

</project>
