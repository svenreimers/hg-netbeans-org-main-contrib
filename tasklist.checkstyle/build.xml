<project name="tasklist/checkstyle" default="netbeans" basedir=".">

    <property name="nb_all" value="../.."/>

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nb_all}/nbbuild/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nb_all}/nbbuild/nbantext.jar"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nb_all}/nbbuild/nbantext.jar"/>

    <property name="nbm_alias" value="nb_ide"/>
    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" value="${nb_all}/nbbuild/standard-nbm-license.txt"/>
    <property file="../version.properties"/>

    <!-- TODO Remove this when the module is part of the full tasklist build -->
    <property name="build.compiler.debug" value="on"/>

    <target name="check-external">
        <available file="../external/checkstyle-all-3.3.jar" property="checkstyle-all.present" />
        <fail unless="checkstyle-all.present" message="Missing library. Read README for proper setup." />
        <available file="../external/checkstyle.xml" property="checkstyle-rule.present" />
        <fail unless="checkstyle-rule.present" message="Missing ruleset. Read README for proper setup."/>
    </target>

    <target name="compile" depends="check-external">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath>
                <pathelement location="${nb_all}/openide/netbeans/lib/openide.jar"/>
                <pathelement location="${nb_all}/openide/loaders/netbeans/lib/openide-loaders.jar"/>
                <!-- tasklist api -->
                <pathelement path="../api/src"/>
                <!-- tasklist core -->
                <pathelement path="../core/src"/>
                <!-- java src model -->
                <pathelement path="../../java/srcmodel/netbeans/modules/autoload/java-src-model.jar"/>
                <!-- checkstyle -->
                <fileset dir="../external">
                    <include name="checkstyle-all-*.jar"/>
                </fileset>
            </classpath>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="netbeans/modules"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <filter filtersfile="../version.properties"/>
        <filter token="tl.checkstyle.spec" value="${tl.checkstyle.spec}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <locjar jarfile="netbeans/modules/eager/tasklist-checkstyle.jar"
                manifest="manifest-subst.mf"
                basedir="src"
	        excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
	        compress="false">
            <locale name="ja"/>
        </locjar>
    </target>

    <target name="netbeans" depends="jars,release">
        <genlist targetname="nbm" outputfiledir="netbeans"/>
    </target>

    <target name="nbm" depends="netbeans">
        <makenbm file="../tasklist-checkstyle.nbm"
                 topdir="."
                 module="netbeans/modules/eager/tasklist-checkstyle.jar"
                 homepage="http://tasklist.${homepage.base}/updates/tasklist-checkstyle.html"
                 distribution="http://${dist.base}/tasklist-checkstyle.nbm"
                 needsrestart="false">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="changelog">
        <style in="module-updates.xml" out="../www/updates/tasklist-checkstyle.html" style="../www/updates/updates.xsl"/>
    </target>
      
    <target name="clean">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="../tasklist-checkstyle.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
        <delete dir="javadoc"/>
    </target>

    <target name="release"> <!-- if you do this, add init target to unscramble-->
       <mkdir dir="netbeans/modules/eager/ext"/>
       <copy todir="netbeans/modules/eager/ext">
         <fileset dir="../external">
           <include name="checkstyle*.jar"/>
         </fileset>
       </copy>
       <mkdir dir="netbeans/configs"/>
       <copy todir="netbeans/configs">
         <fileset dir="../external">
           <include name="checkstyle.xml"/>
         </fileset>
       </copy>
    </target>



    <target name="javahelp">
    </target>

</project>
