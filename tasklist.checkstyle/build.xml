<project name="tasklist/checkstyle" default="netbeans" basedir=".">

    <property name="license.file" value="${basedir}/license.txt"/>
    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="netbeans-extra" depends="release"/>

    <target name="release" depends="build-init">
        <loadfile property="readme.txt" srcfile="README" />

        <available file="../external/checkstyle.jar" property="checkstyle.present" />
        <fail unless="checkstyle.present"> Missing library.
            ${readme.txt}
        </fail>
        <available file="../external/antlr.jar" property="antlr.present" />
        <fail unless="antlr.present">Missing library.
            ${readme.txt} 
        </fail>
        <available file="../external/commons-beanutils-core.jar" property="commons-beanutils-core.present" />
        <fail unless="commons-beanutils-core.present"> Missing library.
            ${readme.txt} 
        </fail>
        <available file="../external/commons-cli.jar" property="commons-cli.present" />
        <fail unless="commons-cli.present"> Missing library.
            ${readme.txt} 
        </fail>
        <available file="../external/commons-collections.jar" property="commons-collections.present" />
        <fail unless="commons-collections.present">Missing library.
            ${readme.txt} 
        </fail>
        <available file="../external/checkstyle_checks.xml" property="checkstyle-rule.present" />
        <fail unless="checkstyle-rule.present">Missing library.
            ${readme.txt}
        </fail>
        
        <mkdir dir="${cluster}/modules/ext"/>
        <copy todir="${cluster}/modules/ext">
            <fileset dir="../external">
                <include name="checkstyle.jar"/>
                <include name="antlr.jar"/>
                <include name="commons-beanutils-core.jar"/>
                <include name="commons-cli.jar"/>
                <include name="commons-collections.jar"/>
            </fileset>
        </copy>
       <mkdir dir="${cluster}/configs"/>
       <copy tofile="${cluster}/configs/checkstyle.xml" file="../external/checkstyle_checks.xml"/>
    </target>
    
    <target name="changelog">
        <style in="module-updates.xml" out="../www/updates/tasklist-checkstyle.html" 
            style="../www/updates/updates.xsl"/>
    </target>
    
    <target name="pmd-check">
        <taskdef name="pmd" classname="net.sourceforge.pmd.ant.PMDTask">
            <classpath>
                <fileset dir="C:\Programme\pmd-2.0\lib\">
                    <include name="*.jar"></include>
                </fileset>
            </classpath>
        </taskdef>
        <pmd printtoconsole="true" shortfilenames="true"  
            rulesetfiles="rulesets/imports.xml,
                rulesets/unusedcode.xml,
                rulesets/basic.xml">
            <formatter linkprefix="src/" type="html" tofile="pmd-report.html"/>
            <fileset dir="src">
                <include name="**/*.java"/>
            </fileset>
        </pmd>
    </target>

</project>
