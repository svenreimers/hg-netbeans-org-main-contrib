<filesystem>
<folder name="Templates">

    <!-- Templates in this folder become project types that can be generated
         by the New Wizard -->

    <folder name="Project">
        <!-- This folder will appear in the left in the new project wizard -->
        <folder name="Povray">
            <!-- This attribute points to a bundle where there will be a
              string value for "Templates/Project/Povray" -->
         <attr name="SystemFileSystem.localizingBundle" 
                stringvalue="org.netbeans.modules.povproject.resources.Bundle"/>

            <!-- This is where to find a description for the Povray category -->    
            <attr name="instantiatingWizardURL" 
                urlvalue="nbresloc:/org/netbeans/modules/povproject/resources/povrayProjects.html"/>

            <!-- This is a template for a povray project. -->
            <file name="basicPovrayProject.xml">
                <!-- It must be marked as a template, so its DataObject will
                     return true from isTemplate() -->
                <attr name="template" boolvalue="true"/>
                <!-- Pointer to a bundle which has a value for the key
                    Templates/Project/Povray/basicPovrayProject.xml -->
                <attr name="SystemFileSystem.localizingBundle" 
                    stringvalue="org.netbeans.modules.povproject.resources.Bundle"/>

                <!-- Pointer to the icon - basically a performance operation to
                     avoid loading some stuff -->    
                <attr name="SystemFileSystem.icon" 
                    urlvalue="nbresloc:/org/netbeans/modules/povproject/resources/povicon.gif"/>

                <!-- Pointer to the description of this file, which will appear
                     in the bottom of the New wizard -->    
                <attr name="instantiatingWizardURL" 
                    urlvalue="nbresloc:/org/netbeans/modules/povproject/resources/basicProject.html"/>

                <!-- Pointer to a static method which will create the 
                     Wizard.Iterator that produces the panes of the wizard and
                     will create the project -->
                <attr name="instantiatingIterator"  
                    methodvalue="org.netbeans.modules.povproject.wizard.NewProjectIterator.iterator"/> 
            </file>
        </folder>

        <!-- Define a sample project in the Samples dir -->
        <folder name="Samples">
            <folder name="Povray">
                <file name="samplePovrayProject.xml">
                    <attr name="template" boolvalue="true"/>
                    <attr name="SystemFileSystem.localizingBundle" 
                        stringvalue="org.netbeans.modules.povproject.resources.Bundle"/>
                        
                    <attr name="SystemFileSystem.icon" 
                        urlvalue="nbresloc:/org/netbeans/modules/povproject/resources/povicon.gif"/>
                        
                    <attr name="instantiatingWizardURL" 
                        urlvalue="nbresloc:/org/netbeans/modules/povproject/resources/samplePovrayProject.html"/>
                        
                    <attr name="instantiatingIterator" 
                        methodvalue="org.netbeans.modules.povproject.wizard.NewProjectIterator.iterator"/> 
                </file>
            </folder>
        </folder>
    </folder>

  <!-- The folder below becomes a category in the New from Template wizard -->
  <folder name="Povray">
    <!-- URL is a pointer to the content for the file -->
    <file name="Empty.pov" url="templates/Empty.pov">

      <!-- Identifies the resource bundle where localized name of Empty.pov is -->
      <attr name="SystemFileSystem.localizingBundle" 
            stringvalue="org.netbeans.modules.povproject.resources.Bundle"/>

      <attr name="template" boolvalue="true"/>

      <!-- URL to a text description to show in the new wizard -->
      <attr name="instantiatingWizardURL" 
        urlvalue="nbresloc:/org/netbeans/modules/povproject/resources/emptypov.html"/> 

      <!-- Icon to use for the file -->
      <attr name="SystemFileSystem.icon" 
      urlvalue="nbresloc:org/netbeans/modules/povproject/resources/povicon.gif"/>

      <!-- A programmatic category -->
      <attr name="templateCategory" stringvalue="povray-types"/>

    </file>

    <!-- URL is a pointer to the content for the file -->
    <file name="Empty.inc" url="templates/Empty.inc">

      <!-- Identifies the resource bundle where localized name of Empty.pov is -->
      <attr name="SystemFileSystem.localizingBundle" 
            stringvalue="org.netbeans.modules.povproject.resources.Bundle"/>

      <attr name="template" boolvalue="true"/>

      <!-- URL to a text description to show in the new wizard -->
      <attr name="instantiatingWizardURL" 
        urlvalue="nbresloc:/org/netbeans/modules/povproject/resources/emptyinc.html"/> 

      <!-- Icon to use for the file -->
      <attr name="SystemFileSystem.icon" 
        urlvalue="nbresloc:org/netbeans/modules/povproject/resources/povicon.gif"/>

      <!-- A programmatic category -->
      <attr name="templateCategory" stringvalue="povray-types"/>

    </file>    
  </folder>
</folder>

    <folder name="Povray">
        <!-- PovProject.createProject() will instantiate one of these templates 
             inside a new project, depending on whether the user chooses 
             the sample project template or the empty template -->
        <file name="Empty.pov" url="templates/Empty.pov">
          <!-- Sent the template property so DataObject.createFromTemplate() will
               work -->
          <attr name="template" boolvalue="true"/>
        </file>

        <file name="NetBeansLogo.pov" url="templates/NetBeansLogo.pov">
          <attr name="template" boolvalue="true"/>
        </file>

        <!-- This folder contains fixed renderer settings -->
        <folder name="RendererSettings">

            <!-- This attribute causes the display names for DataObjects for files
                 in this folder to be taken from Bundle.properties in this directory -->
            <attr name="SystemFileSystem.localizingBundle" 
                stringvalue="org.netbeans.modules.povproject.resources.Bundle"/>

            <file name="160x100.properties" url="160x100.properties"/>
            <file name="320x200.properties" url="320x200.properties"/>
            <file name="640x480.properties" url="640x480.properties"/>
            <file name="640x480hq.properties" url="640x480hq.properties"/>
            <file name="1024x768.properties" url="1024x768.properties"/>
            <file name="1024x768hq.properties" url="1024x768hq.properties"/>
        </folder>
    </folder>


</filesystem>
