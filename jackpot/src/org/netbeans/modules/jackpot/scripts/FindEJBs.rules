// Find J2EE JavaBean classes by their implemented interfaces.
$cls => comment("Entity bean class") :: $cls instanceof javax.ejb.EntityBean;
$cls => comment("Session bean class") :: $cls instanceof javax.ejb.SessionBean;
$cls => comment("Message-driven bean class") :: $cls instanceof javax.ejb.MessageDrivenBean && $cls instanceof javax.jms.MessageListener;
$cls => comment("Remote interface") :: $cls instanceof javax.ejb.EJBObject;
$cls => comment("Remote home interface") :: $cls instanceof javax.ejb.EJBHome;
$cls => comment("Local interface") :: $cls instanceof javax.ejb.EJBLocalObject;
$cls => comment("Local home interface") :: $cls instanceof javax.ejb.EJBLocalHome;
