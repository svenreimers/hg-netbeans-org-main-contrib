/**
 * Change StringTokenizer code to instead use java.util.Scanner, as suggested
 * in "http://java.sun.com/developer/JDCTechTips/2005/tt0308.html#2".
 */

mapclass java.util.StringTokenizer => java.util.Scanner;

new java.util.StringTokenizer($s, $d) => 
    new java.util.Scanner($s).useDelimiter("\\\\s*" + $d + "\\\\s*");
new java.util.StringTokenizer($s, $d, $b) => 
    transformationFailure("no translation for StringTokenizer(String,String,boolean)");

$s.countTokens() => transformationFailure("no translation for StringTokenizer.countTokens()")
    :: $s instanceof java.util.StringTokenizer;
$s.hasMoreElements() => $s.hasNext() :: $s instanceof java.util.StringTokenizer;
$s.hasMoreTokens() => $s.hasNext() :: $s instanceof java.util.StringTokenizer;
$s.nextElement() => $s.next() :: $s instanceof java.util.StringTokenizer;
$s.nextToken() => $s.next() :: $s instanceof java.util.StringTokenizer;
$s.nextToken($d) => $s.next("\\\\s*" + $d + "\\\\s*") :: 
    $s instanceof java.util.StringTokenizer;
