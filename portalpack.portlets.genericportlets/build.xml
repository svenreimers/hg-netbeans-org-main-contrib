<project name="org.netbeans.modules.portalpack.portlets.genericportlets" default="netbeans" basedir=".">
    
    <description>Builds, tests, and runs the project org.netbeans.modules.portalpack.portlets.genericportlets.</description>
    <import file="../../../nbbuild/templates/projectized.xml"/>
    <property name="s2b_res_root" location="src/org/netbeans/modules/portalpack/portlets/genericportlets"/>
    <property name="s2b_root_1_0" location="src/org/netbeans/modules/portalpack/portlets/genericportlets/ddapi/impl/model_1_0"/>
      
    <target name="build-init" depends="projectized.build-init"/>
    <target name="compile" depends="dd2beans_gen,projectized-common.compile">
        
        <property name="build.templates.projects.dir" value="${build.classes.dir}/templates/projects"/>
        <property name="build.templates.dir" value="${build.classes.dir}/templates"/>
        <property name="src.templates.projects.dir" value="${src.dir}/templates/projects"/>
    
        <delete file="${build.templates.projects.dir}/JSR168PortletApplication.zip" quiet="true"></delete>
        
        <delete dir="${build.templates.dir}/lib"/>
        <mkdir dir="${build.templates.dir}/lib"/>
        
        <copy file="../../external/portlet/portlet-api-1.0.jar"
        todir="${src.templates.projects.dir}/JSR168PortletApplication/lib"/>
        <copy file="../../external/portlet/portlettaglib-1.0.jar"
        todir="${src.templates.projects.dir}/JSR168PortletApplication/lib"/>
        <copy file="../../external/portlet/portlet.tld"
        todir="${src.templates.projects.dir}/JSR168PortletApplication/web/WEB-INF"/>
        
        <copy file="../../external/portlet/portlet-api-1.0.jar"
        todir="${build.templates.dir}/lib"/>
        <copy file="../../external/portlet/portlettaglib-1.0.jar"
        todir="${build.templates.dir}/lib"/>
        <copy file="../../external/portlet/portlet.tld"
        todir="${build.templates.dir}/lib"/>
        
         <zip destfile="${build.templates.projects.dir}/JSR168PortletApplication.zip" basedir="${src.templates.projects.dir}/JSR168PortletApplication"/>
         <delete file="${src.templates.projects.dir}/JSR168PortletApplication/lib/portlet-api-1.0.jar" quiet="true"></delete>
         <delete file="${src.templates.projects.dir}/JSR168PortletApplication/lib/portlettaglib-1.0.jar" quiet="true"></delete>
         <delete file="${src.templates.projects.dir}/JSR168PortletApplication/web/WEB-INF/portlet.tld" quiet="true"></delete>
         
    </target>
    
    <target name="netbeans-extra" depends="release"/>

    <target name="release" depends="init">
        
        <mkdir dir="${cluster}/modules/ext/portalpack/jdom"/>
        <mkdir dir="${cluster}/modules/ext/portalpack/velocity"/>
        
        
        <copy file="../../external/jdom/jaxen-core.jar"
        todir="${cluster}/modules/ext/portalpack/jdom"/>
        <copy file="../../external/jdom/jaxen-jdom.jar"
        todir="${cluster}/modules/ext/portalpack/jdom"/>
        <copy file="../../external/jdom/jdom.jar"
        todir="${cluster}/modules/ext/portalpack/jdom"/>
        
        <copy file="../../external/jdom/saxpath.jar"
        todir="${cluster}/modules/ext/portalpack/jdom"/>
        
        <copy file="../../external/velocity/commons-collections.jar"
        todir="${cluster}/modules/ext/portalpack/velocity"/>
        <copy file="../../external/velocity/log4j-core-1.1.3.jar"
        todir="${cluster}/modules/ext/portalpack/velocity"/>
        <copy file="../../external/velocity/logkit-1.0.1.jar"
        todir="${cluster}/modules/ext/portalpack/velocity"/>
        <copy file="../../external/velocity/velocity-1.4.jar"
        todir="${cluster}/modules/ext/portalpack/velocity"/>

        <copy file="../../external/portlet/portlet-api-1.0.jar"
        todir="${cluster}/modules/ext/portalpack/"/>
        <copy file="../../external/portlet/portlet-api-2.0.jar"
        todir="${cluster}/modules/ext/portalpack/"/>
        
    </target>

     <target name="nbm" depends="init,netbeans" description="Build NBM archive.">
        <mkdir dir="build"/>
        <makenbm file="build/${nbm}"
                 productdir="${cluster}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="${nbm.distribution}"
                 needsrestart="${nbm.needs.restart}"
                 global="${nbm.is.global}"
                 releasedate="${nbm.release.date}"
		 moduleauthor="${nbm.module.author}">
            <license file="${basedir}/../../LICENSE"/>
            <!-- <license name="${basedir}/../../LICENSE">
                <text>For the integration module:</text>
                <file location="${basedir}/../../LICENSE"/>

             </license> -->
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

 <target name="schema2beans">
    <ant dir="../../../schema2beans" target="build"/>
  </target>
  <target name="s2binit" depends="schema2beans">
	<taskdef name="schema2beans" classname="org.netbeans.modules.s2banttask.Schema2BeansAntTask">
	  <classpath>
		<pathelement path="${schema2beans/rt.dir}/modules/org-netbeans-modules-schema2beans.jar" />
		<pathelement path="${nb_all}/schema2beans/dev/schema2beansdev.jar" />
		<pathelement path="${nb_all}/schema2beans/anttask/s2banttask.jar"/>
	  </classpath>
	</taskdef>
  </target>
  
  <target name="dd2beans_gen" depends="s2binit">
      <echo message="generating bean graph for portlet xml configuration files" />
	<schema2beans schema="${s2b_res_root}/portlet-app_1_0.xsd"
	  package="org.netbeans.modules.portalpack.portlets.genericportlets.ddapi.impl.model_1_0"
          mddFile="${s2b_res_root}/portlet-app_1_0.mdd"
	  schemaType="xmlschema"
	  useInterfaces="true"
	  validate="true"
	  attrProp="true"
	  removeUnreferencedNodes="true"
	  rootDir="src"/>
	
  </target>
  
  <target name="clean" depends="projectized-common.clean,clean-ddgen-src"/>
   <target name="clean-ddgen-src">
        <mkdir dir="${s2b_root_1_0}"/>
        <delete>
            <fileset dir="${s2b_root_1_0}">
                <include name="*.java"/>
            </fileset>
        </delete>
        <delete dir="${s2b_root_1_0}"/>
  </target>
  

   
</project>
