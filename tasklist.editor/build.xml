<project name="tasklist/editor" default="netbeans" basedir=".">

    <!-- It defines bunch of properties and tasks -->
    <import file="../../nbbuild/default.xml"/>

    <property file="../version.properties"/>
    <property name="build.compiler.debug" value="on"/>

    <target name="init" depends="default.init">
      <patternset id="tasklist/editor.files">
        <include name="${nb.modules/eager.dir}/tasklist-editor.jar"/>
      </patternset>

      <path id="cp">
        <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
        <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar"/>
        <pathelement location="${tasklist/api.dir}/${nb.modules/autoload.dir}/tasklist-api.jar"/>
        <pathelement location="${tasklist/core.dir}/${nb.modules/autoload.dir}/tasklist-core.jar"/>
        <pathelement location="${tasklist/usertasks.dir}/${nb.modules.dir}/tasklist-usertasks.jar"/>

        <!-- CCDB -->
        <pathelement location="${editor.dir}/${nb.modules.dir}/org-netbeans-modules-editor-lib.jar"/>
        <pathelement location="${editor.dir}/${nb.modules.dir}/org-netbeans-modules-editor.jar"/>

        <!-- java friend -->
        <pathelement location="${java/api.dir}/${nb.modules.dir}/org-netbeans-api-java.jar"/>
        <pathelement location="${java/srcmodel.dir}/${nb.modules.dir}/org-openide-src.jar"/>
        <pathelement location="${java.dir}/${nb.modules.dir}/org-netbeans-modules-java.jar"/>

      </path>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}" source="1.4">
            <classpath refID="cp"/>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/eager.dir}"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <filter filtersfile="../version.properties"/>
        <filter token="tl.editor.spec" value="${tl.editor.spec}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/eager.dir}/tasklist-editor.jar"
                manifest="manifest-subst.mf"
                basedir="src"
	        excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
	        compress="false">
        </jar>
    </target>

    <target name="netbeans" depends="jars, simulate_module_autorecognition">
        <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules/eager.dir}/tasklist-editor.jar">
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <patternset refID="tasklist/editor.files"/>
           </fileset>
        </genlist>
    </target>

    <!--
        NetBeans 4.0 is not able to generate this information in runtime anymore.
        Missing information confuses system (and users).
        It's done for standard distribution on centralized place in nbbuild/build.xml.
    -->
    <target name="simulate_module_autorecognition">

        <echo message="Simulating module autorecognition in ${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules ..."/>

        <taskdef name="createmodulexml" classname="org.netbeans.nbbuild.CreateModuleXML" classpath="../../nbbuild/nbantext.jar"/>

        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules"/>
        <createmodulexml xmldir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules">
          <!--enabled dir="${netbeans.dest.dir}/${one.cluster.dir}">
            <include name="${nb.modules.dir}/*.jar"/>
          </enabled>
          <autoload dir="${netbeans.dest.dir}/${one.cluster.dir}">
            <include name="${nb.modules/autoload.dir}/*.jar"/>
          </autoload-->
          <eager dir="${netbeans.dest.dir}/${cluster.dir}">
            <include name="${nb.modules/eager.dir}/tasklist-editor.jar"/>
          </eager>
        </createmodulexml>
    </target>

    <target name="nbm" depends="netbeans">
        <makenbm file="../tasklist-editor.nbm"
                 productdir="${netbeans.dest.dir}/${cluster.dir}"
                 module="${nb.modules.eager.dir}/tasklist-editor.jar"
                 homepage="http://tasklist.${homepage.base}/updates/tasklist-editor.html"
                 distribution="http://${dist.base}/tasklist-editor.nbm"
                 needsrestart="false">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="changelog">
        <style in="module-updates.xml" out="../www/updates/tasklist-editor.html" style="../www/updates/updates.xsl"/>
    </target>
          
    <target name="clean" depends="init">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="../tasklist-editor.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
        <delete dir="javadoc"/>
    </target>

    <target name="release">
    </target>

    <target name="javahelp">
    </target>

    <!-- This target will only work *inside* the IDE! -->
    <target name= "test" depends="jars" description="Test the module inside the running IDE." >
       <nbinstaller action="reinstall" module="netbeans/modules/eager/tasklist-editor.jar"/>
    </target>
</project>
