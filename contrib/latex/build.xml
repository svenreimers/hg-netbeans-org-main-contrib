<project name="latex/test" default="netbeans" basedir=".">

    <import file="../nbbuild/templates/projectized.xml"/>
    
    <target name="clean-modules">
        <ant dir="ant" target="clean" />
        <ant dir="ant/antint" target="clean" />
        <ant dir="auted" target="clean" />
        <ant dir="bibtex" target="clean" />
        <ant dir="branding" target="clean" />
        <ant dir="core" target="clean" />
        <ant dir="editor" target="clean" />
        <ant dir="guiproject" target="clean" />
        <ant dir="loaders" target="clean" />
        <ant dir="model" target="clean" />
        <ant dir="nexplorer" target="clean" />
        <ant dir="project" target="clean" />
        <ant dir="ui" target="clean" />
    </target>
    
    <target name="build-modules">
	<ant dir="../nbbuild" target="all-latex/auted" />
	<ant dir="../nbbuild" target="all-latex/ant/antint" />
	<ant dir="../nbbuild" target="all-latex/bibtex" />
	<ant dir="../nbbuild" target="all-latex/branding" />
	<ant dir="../nbbuild" target="all-latex/core" />
	<ant dir="../nbbuild" target="all-latex/editor" />
	<ant dir="../nbbuild" target="all-latex/guiproject" />
	<ant dir="../nbbuild" target="all-latex/loaders" />
	<ant dir="../nbbuild" target="all-latex/model" />
	<ant dir="../nbbuild" target="all-latex/nexplorer" />
	<ant dir="../nbbuild" target="all-latex/project" />
	<ant dir="../nbbuild" target="all-latex/ui" />
    </target>

    <target name="nbm-modules">
        <ant dir="ant/antint" target="nbm" />
        <ant dir="auted" target="nbm" />
        <ant dir="bibtex" target="nbm" />
        <ant dir="branding" target="nbm" />
        <ant dir="core" target="nbm" />
        <ant dir="editor" target="nbm" />
        <ant dir="guiproject" target="nbm" />
        <ant dir="loaders" target="nbm" />
        <ant dir="model" target="nbm" />
        <ant dir="nexplorer" target="nbm" />
        <ant dir="project" target="nbm" />
        <ant dir="ui" target="nbm" />
    </target>

    <target name="test-modules">
	<ant antfile="../xtest/lib/harness.xml" target="runtests">
	   <property name="xtest.instance.master-config" location="master-config.xml" />
	   <property name="xtest.instance.name" value="LaTeX tests" />
	   <property name="xtest.home" location="../xtest" />
	   <property name="xtest.basedir" location=".." />
	   <property name="xtest.config" value="latex-tests" />
	</ant>
    </target>
    
    <target name="clean-tests">
        <ant dir="bibtex/test" target="realclean" />
        <ant dir="core/test" target="realclean" />
        <ant dir="project/test" target="realclean" />
        <ant dir="guiproject/test" target="realclean" />
        <ant dir="test" target="realclean" />
        <delete  dir="results" />
    </target>
    
    <target name="clean-build">
        <antcall target="clean-tests" />
        <antcall target="clean-modules" />
        <antcall target="build-modules" />
        <antcall target="nbm-modules" />
        <antcall target="test-modules" />
    </target>

</project>
