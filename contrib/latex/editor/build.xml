<project name="org.netbeans.modules.latex.editor" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.latex.editor.</description>
    <import file="nbproject/build-impl.xml"/>

    <target name="compile-language-tex">
        <ant dir="../../lexer/gen" /><!--inheritAll="false"/>-->
        <ant dir="src/org/netbeans/modules/latex/editor" antfile="../../../../../../../../lexer/gen/src/org/netbeans/modules/lexer/gen/handcoded/handcodedLangBuild.xml" target="compile">
            <property name="grammar.name" value="Tex" />
            <property name="grammar.pkg" value="org.netbeans.modules.latex.editor" />
            <property name="grammar.root" value="." />
            <property name="lexer.module.root" value="../../../../../../../../lexer" />
            <property name="lang.description.xml.ignore" value="false" />
        </ant>
    </target>
    
    <target name="compile-language-bibtex">
        <ant dir="../../lexer/gen" /><!--inheritAll="false"/>-->
        <ant dir="src/org/netbeans/modules/latex/editor/bibtex" antfile="../../../../../../../../../lexer/gen/src/org/netbeans/modules/lexer/gen/handcoded/handcodedLangBuild.xml" target="compile">
            <property name="lexer.module.root" value="../../../../../../../../../lexer" />
            <property name="grammar.name" value="BiBTeX" />
            <property name="grammar.pkg" value="org.netbeans.modules.latex.editor.bibtex" />
            <property name="grammar.root" value="." />
            <property name="lang.description.xml.ignore" value="false" />
        </ant>
    </target>
  
    <target name="do-editor-release">
        <mkdir dir="${cluster}/bin" />
        <copy file="../client/src/client.linux" tofile="${cluster}/bin/lide-editor-client" failonerror="false" />
        <chmod file="${cluster}/bin/lide-editor-client" perm="uog+x" />
    </target>
  
    <target name="netbeans-extra" depends="do-editor-release"/>
</project>
