<project name="latex/editor" default="netbeans" basedir=".">

  <import file="../../nbbuild/templates/projectized.xml"/>

  <target name="basic-init" depends="projectized.basic-init,compile-language">
  </target>
      
  <target name="compile-language">
    <property name="grammar.name" value="Tex" />
    <property name="grammar.pkg" value="org.netbeans.modules.latex.editor" />
    <property name="grammar.root" value="." />
    <property name="lexer.module.root" value="../../../../../../../../lexer" />
    <property name="lang.description.xml.ignore" value="false" />
    
    <ant dir="../../lexer/gen" /><!--inheritAll="false"/>-->
    <ant dir="src/org/netbeans/modules/latex/editor" antfile="${lexer.module.root}/gen/src/org/netbeans/modules/lexer/gen/handcoded/handcodedLangBuild.xml" target="compile" />
  </target>
  
  <target name="do-editor-release">
    <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/bin" />
    <copy file="../client/src/client.linux" tofile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/bin/lide-editor-client" failonerror="false" />
    <chmod file="${netbeans.dest.dir}/${cluster.dir}/modules/bin/lide-editor-client" perm="uog+x" />
  </target>
  
  <target name="netbeans-extra" depends="do-editor-release"/>

</project>
