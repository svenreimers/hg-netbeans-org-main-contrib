<project name="module-support" default="all" basedir=".">

    <import file="${basedir}/nbproject/build-impl.xml" />
    
    <target name="-pre-nbm" depends="basic-init">
        <fail unless="dist.base">
            Need to specify dist.base.
        </fail>
        <property name="nbm.distribution" value="http://${dist.base}/${code.name.base.dashes}.nbm"/>
    </target>
    
    <target name="nbm" depends="-pre-nbm,projectized-common.nbm" />
    
</project>
