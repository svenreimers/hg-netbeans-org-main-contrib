<!DOCTYPE file PUBLIC "-//NetBeans//LaTeX Commands Description 1.0//EN" "command_description.dtd"
[
<!ENTITY genericCommands
         SYSTEM "generic_commands.xml" >
<!ENTITY genericEnvironments
         SYSTEM "generic_environments.xml" >
<!ENTITY genericOptions
         SYSTEM "generic_options.xml" >
<!ENTITY genericSymbols
         SYSTEM "symbols_generic.xml" >
]>

<file name="report" type="docclass">
  <options>
    &genericOptions;
  </options>

  <environments>
    &genericEnvironments;
  </environments>

  <commands>
    &genericCommands;
    &genericSymbols;
    
    <command name="\chapter">
        <attribute name="#caption-command" value="true" />
        <attribute name="#section-command" value="true" />
        <attribute name="par" value="true" />
        <argument type="mandatory">
            <attribute name="#text" value="true"/>
            <attribute name="#caption" value="true"/>
        </argument>
    </command>

    <command name="\chapter*">
        <attribute name="#caption-command" value="true" />
        <attribute name="#section-command" value="true" />
        <attribute name="par" value="true" />
        <argument type="mandatory">
            <attribute name="#text" value="true"/>
            <attribute name="#caption" value="true"/>
        </argument>
    </command>

  </commands>
</file>
