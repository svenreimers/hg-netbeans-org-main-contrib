<!DOCTYPE file PUBLIC "-//NetBeans//LaTeX Commands Description 1.0//EN" "command_description.dtd">

<file name="algpseudocode" type="package">
  <includes>
    <include name="algorithmicx" />
  </includes>
  
  <options>
  </options>

  <environments>
    <environment name="algorithmic">
        <commands>
            <command name="\State"/>

            <command name="\For">
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
            </command>

            <command name="\ForAll">
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
            </command>

            <command name="\EndFor"/>

            <command name="\While">
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
            </command>

            <command name="\EndWhile"/>

            <command name="\Until">
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
            </command>

            <command name="\Repeat"/>

            <command name="\If">
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
            </command>
            <command name="\ElsIf">
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
            </command>

            <command name="\EndIf"/>
            <command name="\Else"/>

            <command name="\Procedure">
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
            </command>

            <command name="\EndProcedure" />

            <command name="\Function">
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
              <argument type="mandatory">
                <attribute name="#code" value="true" />
              </argument>
            </command>

            <command name="\EndFunction" />

            <command name="\Loop" />
            <command name="\EndLoop" />
            <command name="\Require" />
            <command name="\Ensure" />

            <command name="\Comment">
              <argument type="mandatory">
                <attribute name="#text" value="true" />
              </argument>
            </command>

        </commands>
    </environment>
  </environments>

  <commands>
  </commands>
</file>
