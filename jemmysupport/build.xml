<project name="jemmysupport" default="netbeans" basedir=".">

  <property name="nbroot" value=".."/>
  <property name="binroot" location="../../nbextra"/>
  <property name="nbext" value="${nbroot}/nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="${nbext}/standard-nbm-license.txt"/>

  <taskdef name="jhindexer" classname="org.netbeans.nbbuild.JHIndexer" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>

  <target name="compile-lib">
    <ant dir="${nbroot}/jemmy/" target="jar"/>
    <mkdir dir="netbeans/modules/ext"/>
    <copy file="${nbroot}/jemmy/jemmy.jar" tofile="netbeans/modules/ext/jemmy.jar" filtering="off"/>
  </target>

  <target name="compile" depends="compile-lib">
  <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="netbeans/modules/ext/jemmy.jar"/>
        <pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <pathelement location="${nbroot}/openide/netbeans/lib/openide.jar" />
        <pathelement location="${nbroot}/diff/netbeans/modules/diff.jar" />
        <!-- Hopefully set up by nbbuild/build.xml: -->
        <pathelement location="${jdkhome}/lib/tools.jar"/>
      </classpath>
    </javac>
  </target>
  
  <target name="javadoc" unless="jemmy.javadoc.uptodate">
      <ant dir="${nbroot}/jemmy/" target="api"/>
      <mkdir dir="netbeans/docs"/>
      <zip zipfile="netbeans/docs/jemmy-javadoc.zip"
             basedir="${nbroot}/jemmy/www/javadoc"
             compress="true">
      </zip>
  </target>

  <target name="prepare-docs">
      <uptodate property="jemmy.javadoc.uptodate" targetfile="netbeans/docs/jemmy-javadoc.zip" >
  	      <srcfiles dir= "${nbroot}/jemmy/src" includes="**/*.java"/>
      </uptodate>
      <antcall target="javadoc"/>
  </target>

  <target name="timestamp" unless="buildnumber">
    <tstamp>
        <format property="buildnumber" pattern="yyyyMMddhhmm"/>
    </tstamp>
  </target>
    
  <target name="jars" depends="compile,prepare-docs,timestamp">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/jemmysupport.jar"
         manifest="manifest-subst.mf"
         basedir="src"
	 excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
	 compress="false">
    </locjar>
  </target>

  <target name="netbeans" depends="jars,javahelp">
    <genlist targetname="nbm" outputfiledir="netbeans"/>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="jemmysupport.nbm"
             topdir="."
             module="netbeans/modules/jemmysupport.jar"
	         homepage="http://jemmy.${homepage.base}"
	         distribution="http://${dist.base}/jemmysupport.nbm">
      <license file="${license.file}"/>
<!--      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/> -->
    </makenbm>
  </target>

  <target name="realclean" depends="clean">
    <ant dir="${nbroot}/jemmy/" target="clean"/>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>	
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="jemmysupport.nbm"/>
    <delete dir="netbeans/docs"/>
    <delete dir="netbeans/modules"/>
    <delete dir="Info"/>
    <delete dir="javahelp/org/netbeans/modules/jemmysupport/docs/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/usersguide"/>
  </target>

  <target name="javahelp">
    <mkdir dir="javahelp/org/netbeans/modules/jemmysupport/docs/JavaHelpSearch2"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/jemmysupport/docs/"
               db="javahelp/org/netbeans/modules/jemmysupport/docs/JavaHelpSearch2">
      <classpath>
        <fileset dir="../nbbuild/external">
          <include name="jhall*.jar"/>
        </fileset>
      </classpath>
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch2/"/>
      <exclude name="credits.html"/>
    </jhindexer>
    <mkdir dir="javahelp/org/netbeans/modules/usersguide"/>
    <copy file="${nbroot}/usersguide/javahelp/org/netbeans/modules/usersguide/ide.css" tofile="javahelp/org/netbeans/modules/usersguide/ide.css"/>
    <mkdir dir="netbeans/modules/docs"/>
    <locjar jarfile="netbeans/modules/docs/jemmysupport.jar" compress="true">
        <fileset dir="javahelp" excludesfile="${nbext}/standard-jar-excludes.txt" excludes="org/netbeans/modules/usersguide/"/>
    </locjar>
  </target>

</project>



