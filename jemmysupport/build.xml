<project name="jemmysupport" default="netbeans" basedir=".">
  <import file="../nbbuild/default.xml"/> 
  
  <property name="nbext" value="../nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="${nbext}/standard-nbm-license.txt"/>

  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>

    <target name="init" depends="default.init">
      <patternset id="jemmysupport.files">
        <!-- All files created for NBM -->
        <include name="${nb.modules.dir}/jemmysupport.jar"/>
        <include name="${nb.modules/docs.dir}/jemmysupport.jar"/>
      </patternset>
    </target>
    
  <target name="compile" depends="init,timestamp">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="../jemmy/jemmy.jar"/>
        <pathelement location="../openide/openide-13javac-workaround.jar"/>
        <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar" />
        <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar" />
        <pathelement location="${openide/execution.dir}/${nb.modules.dir}/org-openide-execution.jar" />
        <pathelement location="${core.dir}/${nb.lib.dir}/core.jar" />
        <pathelement location="${diff.dir}/${nb.modules.dir}/diff.jar" />
        <!-- Hopefully set up by nbbuild/build.xml: -->
        <pathelement location="${jdkhome}/lib/tools.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="timestamp" unless="buildnumber">
    <tstamp>
        <format property="buildnumber" pattern="yyyyMMddhhmm"/>
    </tstamp>
  </target>
    
  <target name="jars" depends="compile">
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/jemmysupport.jar"
         manifest="manifest-subst.mf"
         basedir="src"
	 excludesfile="../nbbuild/standard-jar-excludes.txt"
	 compress="false">
    </locjar>
  </target>

  <target name="netbeans" depends="jars,javahelp">
    <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules.dir}/jemmysupport.jar">
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="jemmysupport.files"/>
      </fileset>
    </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="jemmysupport.nbm"
             productdir="${netbeans.dest.dir}/${cluster.dir}"
             module="${nb.modules.dir}/jemmysupport.jar"
	     homepage="http://jemmysupport.${homepage.base}"
	     distribution="http://${dist.base}/jemmysupport.nbm">
      <license file="${license.file}"/>
<!--      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/> -->
    </makenbm>
  </target> 
  
  <target name="clean" depends="init">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
          <patternset refID="jemmysupport.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="jemmysupport.nbm"/>
    <delete dir="javahelp/org/netbeans/modules/jemmysupport/docs/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/usersguide"/>
  </target>

  <target name="javahelp">
    <mkdir dir="javahelp/org/netbeans/modules/jemmysupport/docs/JavaHelpSearch2"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/jemmysupport/docs/"
               db="javahelp/org/netbeans/modules/jemmysupport/docs/JavaHelpSearch2">
      <classpath>
        <fileset dir="../nbbuild/external">
          <include name="jhall*.jar"/>
        </fileset>
      </classpath>
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch2/"/>
      <exclude name="credits.html"/>
    </jhindexer>
    <mkdir dir="javahelp/org/netbeans/modules/usersguide"/>
    <copy file="../usersguide/javahelp/org/netbeans/modules/usersguide/ide.css" tofile="javahelp/org/netbeans/modules/usersguide/ide.css"/>
    <locjar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/docs.dir}/jemmysupport.jar" compress="true">
        <fileset dir="javahelp" excludesfile="${nbext}/standard-jar-excludes.txt" excludes="org/netbeans/modules/usersguide/"/>
    </locjar>
  </target>

</project>



