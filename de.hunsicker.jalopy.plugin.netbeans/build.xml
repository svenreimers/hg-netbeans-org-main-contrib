<project name="jalopy" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="build-init" depends="projectized.build-init">
        <ant dir="external"/>
    </target>

    <target name="release" depends="init">
        <property file="build.properties"/>
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/modules/ext"/>
        <copy todir="${netbeans.dest.dir}/${cluster.dir}/modules/ext">
            <fileset dir="external">
                <include name="${jalopy}"/>
                <include name="${jdom}"/>
                <include name="${log4j}"/>
                <include name="${oro}"/>
            </fileset>
        </copy>
    </target>

    <target name="netbeans-extra" depends="release"/>

    <target name="nbm" depends="init,netbeans" description="Build NBM archive.">
        <mkdir dir="build"/>
        <makenbm file="build/${nbm}"
            productdir="${netbeans.dest.dir}/${cluster.dir}"
            module="${module.jar}"
            homepage="${nbm.homepage}"
            distribution="http://${dist.base}/${nbm}"
            needsrestart="${nbm.needs.restart}"
            releasedate="${nbm.release.date}"
            moduleauthor="${nbm.module.author}">
            <license name="org-netbeans-modules-javacore.txt">
                <text>The Jalopy NetBeans Plugin module is under SPL.</text>
                <text>For the Jalopy Source Code Formatter code itself:</text>
                <file location="external/jalopy-bsd-license.txt"/>
                <text>For the bundled Oro Regular Expressions Library:</text>
                <file location="external/oro-apache-license.txt"/>
                <text>For the bundled Log4j Logging Toolkit:</text>
                <file location="external/log4j-apache-license.txt"/>
                <text>For the bundled JDOM XML API:</text>
                <file location="external/jdom-apache-license.txt"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="clean-all" depends="clean">
        <ant antfile="build.xml" target="clean" inheritAll="false" dir="external"/>
    </target>

</project>
