<project name="org.netbeans.modules.flyingsaucer" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.flyingsaucer.</description>
    <import file="nbproject/build-impl.xml"/>
    <property name="pkgdir" value="${basedir}/release/modules/ext"/>
    
    <target name="clean" depends="projectized-common.clean">
        <delete dir="${basedir}/release/modules"/>
    </target>
    
    <available file="${flyingsaucer.home}" property="fs.set"/>
    
    <target name="build-init" depends="harness.build-init">
<!--        <fail unless="${flyingsaucer.home}">
            Set flyingsaucer.home to the base directory for the
            flyingsaucer project sources.  It is available from
            https://xhtmlrenderer.dev.java.net/
            ${flyingsaucer.home}
        </fail> -->
        <ant inheritall="false" inheritrefs="false" 
        antfile="${flyingsaucer.home}/build.xml" target="jar"/>
        <echo>
Copying libs to release dir
        </echo>
        <mkdir dir="${pkgdir}"/>
        <copy todir="${pkgdir}">
            <fileset dir="${flyingsaucer.home}/build/">
                <include name="**.jar"/>
            </fileset>
            <fileset dir="${flyingsaucer.home}/lib/">
                <include name="**.jar"/>
            </fileset>
        </copy>
    </target>
</project>
