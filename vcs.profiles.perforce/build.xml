<project name="vcsgeneric/profiles/perforce" default="netbeans" basedir=".">
  <import file="../../../nbbuild/default.xml"/>

  <property name="license.file" value="perforce-nbm-license.txt"/>

  <taskdef name="makelayer" classname="org.netbeans.nbbuild.MakeLayer" classpath="${nb_all}/nbbuild/nbantext.jar"/>

  <target name="init" depends="default.init">
    <patternset id="vcsgeneric/profiles/perforce.files">
      <include name="${nb.modules.dir}/perforce-profile.jar"/>
    </patternset>
    <path id="cp">
      <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
      <pathelement location="${vcscore.dir}/${nb.modules.dir}/org-netbeans-modules-vcscore.jar"/>
      <pathelement location="${vcsgeneric.dir}/${nb.modules.dir}/vcsgen.jar"/>
    </path>
  </target>


  <target name="compile" depends="init">
    <javac srcdir="src" 
        deprecation="${build.compiler.deprecation}" 
        debug="${build.compiler.debug}"
        destdir="src">
      <classpath refID="cp"/>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/profiles/perforce/layer-includes-config.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/perforce/config/*.*"/>
       <exclude name="org/netbeans/modules/vcs/profiles/perforce/config/*_ja.*"/>
       <exclude name="org/netbeans/modules/vcs/profiles/perforce/config/*_XX.*"/>
       <exclude name="org/netbeans/modules/vcs/profiles/perforce/config/Bundle.properties"/>
       <exclude name="org/netbeans/modules/vcs/profiles/perforce/config/Bundle_*.properties"/>
    </makelayer>
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/profiles/perforce/layer-includes-configRB.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/perforce/config/Bundle.properties"/>
    </makelayer>
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/profiles/perforce/layer-includes-list.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/perforce/list/*.class"/>
       <include name="org/netbeans/modules/vcs/profiles/perforce/list/*.java"/>
       <include name="org/netbeans/modules/vcs/profiles/perforce/list/*.properties"/>
    </makelayer>
    <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/perforce-profile.jar"
         manifest="manifest-subst.mf"
         basedir="src"
         excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
	 excludes="org/netbeans/modules/vcs/profiles/perforce/mf-layer_XX.xml"
         compress="false">
    </jar>
  </target>

  <target name="netbeans" depends="jars">
    <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules.dir}/perforce-profile.jar">
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="vcsgeneric/profiles/perforce.files"/>
      </fileset>
    </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="perforce-profile.nbm"
             productdir="${netbeans.dest.dir}/${cluster.dir}"
             module="${nb.modules.dir}/perforce-profile.jar"
	     homepage="http://vcsgeneric.${homepage.base}/"
	     distribution="http://${dist.base}/perforce-profile.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
        <include name="org/netbeans/modules/vcs/profiles/perforce/layer-include*.xml"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="perforce-profile.nbm"/>
  </target>

</project>
