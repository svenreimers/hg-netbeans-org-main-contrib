<!-- Simply a wrapper for an externally distributed NBM.

  Note on usefullness

  It essencially just sets NBM distribution attribute.
  The attribute is often updated  by update center
  maintainer (Rob Novak for NetBeans.org ones) either.

  I guess whole script is useless because in typical
  scenarion you should go directly to PMD SourceForge
  project CVS and build the nbm there.

  <http://www.netbeans.org/issues/show_bug.cgi?id=40905>

                                         Cc.
-->
<project name="contrib/pmd" basedir="." default="netbeans">

    <property name="nbm_alias" value="nb_ide"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>

    <target name="init">
        <mkdir dir="tmp"/>
        <unzip src="external/pmd-netbeans35-bin-0.91.zip" dest="tmp">
            <patternset>
                <include name="pmd.nbm"/>
            </patternset>
        </unzip>
        <move file="tmp/pmd.nbm" tofile="tmp/pmd.en-bee-em"/>
        <!-- Daily build scripts may set this differently: -->
        <property name="nbm.target.dir" location="."/>
    </target>

    <target name="netbeans" depends="init">
        <mkdir dir="netbeans"/>
        <unzip src="tmp/pmd.en-bee-em" dest=".">
            <patternset>
                <include name="netbeans/**/*.jar"/>
            </patternset>
        </unzip>
        <!-- genlist cannot handle the nbm target currently; cf. #14839 -->
    </target>

    <!-- Handle stupid ${dist.base} values without the URL protocol: -->
    <target name="check-dist.base">
        <condition property="dist.base-broken">
            <not>
                <contains string="${dist.base}" substring="http://"/>
            </not>
        </condition>
    </target>
    <target name="do-fix-dist.base" depends="check-dist.base" if="dist.base-broken">
        <property name="dist.base.fixed" value="http://${dist.base}"/>
    </target>
    <target name="dont-fix-dist.base" depends="check-dist.base" unless="dist.base-broken">
        <property name="dist.base.fixed" value="${dist.base}"/>
    </target>

    <target name="nbm" depends="init,do-fix-dist.base,dont-fix-dist.base">
        <!-- Distribution attr not set, so this will not work for Dev AU:
        <copy file="tmp/pmd.en-bee-em" tofile="pmd.nbm"/>
        -->
        <mkdir dir="tmp/expanded-nbm"/>
        <unzip dest="tmp/expanded-nbm" src="tmp/pmd.en-bee-em">
            <patternset>
                <!-- Signatures will not work after patching, so redo them: -->
                <exclude name="META-INF/*"/>
            </patternset>
        </unzip>
        <copy file="tmp/expanded-nbm/Info/info.xml" tofile="tmp/info-subst.xml"/>
        <replace file="tmp/info-subst.xml" token='codenamebase="pmd"' value='codenamebase="pmd" distribution="${dist.base.fixed}/pmd.nbm"'/>
        <jar jarfile="tmp/pmd-subst.en-bee-em" compress="true">
            <fileset dir="tmp/expanded-nbm">
                <exclude name="Info/info.xml"/>
            </fileset>
            <zipfileset dir="tmp" includes="info-subst.xml" fullpath="Info/info.xml"/>
        </jar>
        <antcall target="maybe-sign-nbm"/>
        <antcall target="maybe-dont-sign-nbm"/>
    </target>
    <target name="maybe-sign-nbm" if="keystore">
        <signjar jar="tmp/pmd-subst.en-bee-em" signedjar="${nbm.target.dir}/pmd.nbm" keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </target>
    <target name="maybe-dont-sign-nbm" unless="keystore">
        <copy file="tmp/pmd-subst.en-bee-em" tofile="${nbm.target.dir}/pmd.nbm"/>
    </target>

    <target name="clean">
        <delete dir="tmp"/>
        <delete dir="netbeans"/>
        <delete file="pmd.nbm"/>
    </target>

</project>
