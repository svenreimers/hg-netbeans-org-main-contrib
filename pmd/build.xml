<!-- Simply a wrapper for an externally distributed NBM. -->
<project name="contrib/pmd-nb-wrapper" basedir="." default="netbeans">

    <target name="init">
        <ant dir="../../libs/external" target="unscramble"/>
        <mkdir dir="tmp"/>
        <unzip src="../../libs/external/pmd-netbeans35-bin-0.9.zip" dest="tmp">
            <patternset>
                <include name="pmd.nbm"/>
            </patternset>
        </unzip>
    </target>

    <target name="netbeans" depends="init">
        <mkdir dir="netbeans"/>
        <unzip src="tmp/pmd.nbm" dest=".">
            <patternset>
                <include name="netbeans/**/*.jar"/>
            </patternset>
        </unzip>
        <!-- genlist cannot handle the nbm target currently; cf. #14839 -->
    </target>

    <target name="nbm" depends="init">
        <copy file="tmp/pmd.nbm" tofile="pmd.nbm"/>
    </target>

    <target name="clean">
        <delete dir="tmp"/>
        <delete dir="netbeans"/>
        <delete file="pmd.nbm"/>
    </target>

</project>
