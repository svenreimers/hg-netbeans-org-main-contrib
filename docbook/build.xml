<project name="contrib/docbook" basedir="." default="netbeans">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="external">
        <ant dir="${nb_all}/libs/external"/>
        <property file="${nb_all}/libs/public.properties"/>
        <mkdir dir="build/docbook-libs/docbook-xml-${libs.docbook-xml.version}"/>
        <unzip src="${nb_all}/libs/external/docbook-xsl-${libs.docbook-xsl.version}.zip" dest="build/docbook-libs"/>
        <unzip src="${nb_all}/libs/external/slides-${libs.docbook-slides.version}.zip" dest="build/docbook-libs"/>
        <unzip src="${nb_all}/libs/external/docbook-xml-${libs.docbook-xml.version}.zip" dest="build/docbook-libs/docbook-xml-${libs.docbook-xml.version}"/>
        <property name="browser.dir" location="build/docbook-libs/slides-${libs.docbook-slides.version}/browser"/>
        <fileset id="browser.files.list" dir="${browser.dir}">
            <exclude name="**/ChangeLog"/>
        </fileset>
        <pathconvert property="browser.files" refid="browser.files.list" pathsep="," dirsep="/">
            <map from="${browser.dir}${file.separator}" to=""/>
        </pathconvert>
        <property name="graphics.dir" location="build/docbook-libs/slides-${libs.docbook-slides.version}/graphics"/>
        <fileset id="graphics.files.list" dir="${graphics.dir}">
            <exclude name="**/ChangeLog"/>
        </fileset>
        <pathconvert property="graphics.files" refid="graphics.files.list" pathsep="," dirsep="/">
            <map from="${graphics.dir}${file.separator}" to=""/>
        </pathconvert>
        <propertyfile file="build/docbook-libs/config.properties" comment="org.netbeans.modules.docbook configuration">
            <entry key="docbook-xsl.version" value="${libs.docbook-xsl.version}"/>
            <entry key="slides.version" value="${libs.docbook-slides.version}"/>
            <entry key="docbook-xml.version" value="${libs.docbook-xml.version}"/>
            <entry key="browser.files" value="${browser.files}"/>
            <entry key="graphics.files" value="${graphics.files}"/>
        </propertyfile>
    </target>

    <target name="jar" depends="init,compile,jar-prep,external">
        <jarwithmoduleattributes jarfile="${cluster}/${module.jar}" compress="${build.package.compress}" index="${build.package.index}" manifest="${manifest.mf}">
            <fileset dir="${build.classes.dir}"/>
            <zipfileset prefix="org/netbeans/modules/docbook/lib" dir="build/docbook-libs">
                <include name="config.properties"/>
                <include name="slides-${libs.docbook-slides.version}/VERSION"/>
                <include name="slides-${libs.docbook-slides.version}/schema/dtd/slides.dtd"/>
                <include name="slides-${libs.docbook-slides.version}/schema/dtd/slides-full.dtd"/>
                <include name="slides-${libs.docbook-slides.version}/xsl/xhtml/"/>
                <include name="slides-${libs.docbook-slides.version}/browser/"/>
                <include name="slides-${libs.docbook-slides.version}/graphics/"/>
                <include name="docbook-xsl-${libs.docbook-xsl.version}/common/"/>
                <include name="docbook-xsl-${libs.docbook-xsl.version}/lib/"/>
                <include name="docbook-xsl-${libs.docbook-xsl.version}/xhtml/"/>
                <include name="docbook-xsl-${libs.docbook-xsl.version}/VERSION"/>
                <include name="docbook-xml-${libs.docbook-xml.version}/*.dtd"/>
                <include name="docbook-xml-${libs.docbook-xml.version}/*.mod"/>
                <include name="docbook-xml-${libs.docbook-xml.version}/ent/*.ent"/>
                <exclude name="**/ChangeLog"/>
            </zipfileset>
        </jarwithmoduleattributes>
    </target>

    <target name="init" depends="projectized.init,prepare-saxon">
        <copy file="ext/saxon8.jar" todir="${cluster}/modules/ext"/>
    </target>

    <available file="ext/saxon8.jar" property="download-saxon"/>
    <available file="ext/MPL-1.0.txt" property="download-mpl"/>
    <available file="ext/saxon8.jar" property="has-saxon"/>
    
    <target name="-download-saxon" unless="download-saxon">
        <get src="http://www.mozilla.org/MPL/MPL-1.0.txt" dest="ext/MPL-1.0.txt"/>
    </target>
    <target name="-download-mpl" unless="download-mpl">
        <get src="http://www.mozilla.org/MPL/MPL-1.0.txt" dest="ext/MPL-1.0.txt"/>
    </target>
    
    <target name="prepare-saxon" depends="-download-saxon" unless="has-saxon">
        <mkdir dir="ext"/>
        <unzip src="ext/saxon-dist.zip" dest="ext">
            <patternset>
                <include name="saxon8.jar"/>
            </patternset>
        </unzip>
    </target>

    <target name="nbm" depends="init,netbeans,-nbm-prompt-for-storepass,-download-mpl" description="Build NBM archive.">
        <mkdir dir="build"/>
        <property name="nbm.target.cluster" value=""/> <!-- fallback -->
        <makenbm file="build/${nbm}"
                 productdir="${cluster}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="${nbm.distribution}"
                 needsrestart="${nbm.needs.restart}"
                 global="${nbm.is.global}"
                 targetcluster="${nbm.target.cluster}"
                 releasedate="${nbm.release.date}"
                 moduleauthor="${nbm.module.author}">
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
            <license>
                <text>For the module itself:</text>
                <file location="${license.file}"/>
                <text>For the included DocBook stylesheets and Slides DTD:</text>
                <file location="${nb_all}/libs/external/docbook-xsl-${libs.docbook-xsl.version}-license.txt"/>
                <text>For the included DocBook XML DTD:</text>
                <file location="${nb_all}/libs/external/docbook-xml-${libs.docbook-xml.version}-license.txt"/>
                <text>For the included Saxon 8 XSLT processor:</text>
                <file location="ext/MPL-1.0.txt"/>
            </license>
        </makenbm>
    </target>

</project>
