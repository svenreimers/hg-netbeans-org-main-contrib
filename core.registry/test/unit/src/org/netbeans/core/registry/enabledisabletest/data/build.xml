<project basedir="." default="all">
    <property name="nbbpath" value="../../../../../../../../../../../nbbuild/"/>
    <import file="${nbbpath}/default.xml"/>
    <target name="init">
        <mkdir dir="out"/>
	<path id="cp">
            <pathelement location="${nbbpath}/netbeans/platform6/lib/org-openide-util.jar"/>
            <pathelement location="${nbbpath}/netbeans/platform6/core/org-openide-filesystems.jar"/>
            <pathelement location="${nbbpath}/netbeans/platform6/modules/org-openide-loaders.jar"/>
            <pathelement location="${nbbpath}/netbeans/platform6/lib/org-openide-modules.jar"/>
            <pathelement location="${nbbpath}/netbeans/platform6/modules/org-openide-nodes.jar"/>
        </path>
    </target>

    <target name="all" depends="init,bookmodule,cdmodule"/>

    <target name="bookmodule">
        <javac srcdir="bookmodule" destdir="bookmodule" classpath="${openide.dir}/core/openide.jar"> 
		<classpath refid="cp"/>
	</javac> 
        <jar jarfile="bookmodule.jar" manifest="bookmodule.mf">
            <fileset dir="bookmodule"> 
                <include name="**/*.class"/>
		<include name="**/*.xml"/>
            </fileset> 
        </jar>
    </target>

    <target name="cdmodule">
        <javac srcdir="cdmodule" destdir="cdmodule" classpath="${openide/convertor.dir}/modules/org-netbeans-modules-convertor.jar"/> 
        <jar jarfile="cdmodule.jar" manifest="cdmodule.mf">
            <fileset dir="cdmodule"> 
                <include name="**/*.class"/>
            </fileset> 
        </jar>
    </target>

    <target name="clean">
        <delete>
            <fileset dir=".">
                <include name="**/*.class"/>
                <include name="*.jar"/>
            </fileset>
        </delete>
        <delete dir="out"/>
    </target>

</project>
