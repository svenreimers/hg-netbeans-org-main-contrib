<project name="vcsgeneric" default="netbeans" basedir=".">

  <property name="nbroot" value=".."/>
  <property name="binroot" location="../../nbextra"/>
  <property name="nbext" value="${nbroot}/nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <!-- <taskdef name="tojar" classname="org.netbeans.nbbuild.ToJar" classpath="${nbext}/nbantext.jar"/> -->
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="makelayer" classname="org.netbeans.nbbuild.MakeLayer" classpath="${nbext}/nbantext.jar"/>

  <target name="compile">
    <javac srcdir="src" 
        deprecation="${build.compiler.deprecation}" 
        debug="${build.compiler.debug}"
        destdir="src"
        excludes="org/netbeans/modules/vcs/advanced/config">
      <classpath>        
	<pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <!--<pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>-->
        <fileset dir="${nbroot}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
	<pathelement location="${nbroot}/openidex/netbeans/modules/openidex.jar"/>
	<pathelement location="${nbroot}/vcscore/netbeans/modules/vcscore.jar"/>
        <pathelement location="${binroot}/core/release/lib/ext/xerces.jar"/>
      </classpath>
    </javac>
    <javac srcdir="src/org/netbeans/modules/vcs/advanced/config"
        destdir="src/org/netbeans/modules/vcs/advanced/config">
      <classpath>        
	<pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <!--<pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>-->
        <fileset dir="${nbroot}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
	<pathelement location="${nbroot}/openidex/netbeans/modules/openidex.jar"/>
	<pathelement location="${nbroot}/vcscore/netbeans/modules/vcscore.jar"/>
        <pathelement location="${binroot}/core/release/lib/ext/regexp.jar"/>
        <pathelement location="src"/>
      </classpath>
     </javac>
  </target>

  <!--
  <target name="tojar">
    <tojar srcdir="src" unpackeddir="tojar"/>
  </target>
  -->

  <target name="jars" depends="compile">
    <makelayer topdir="src/org/netbeans/modules/vcs/advanced/config" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-commands.xml">
       <include name="vcs/commands/*.class"/>
       <include name="vcs/commands/*.java"/>
       <include name="vcs/commands/*.form"/>
       <include name="vcs/commands/*.properties"/>
    </makelayer>
    <makelayer topdir="src/org/netbeans/modules/vcs/advanced/config" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-commands-passwd.xml">
       <include name="vcs/commands/passwd/*.class"/>
       <include name="vcs/commands/passwd/*.java"/>
       <include name="vcs/commands/passwd/*.form"/>
       <include name="vcs/commands/passwd/*.properties"/>
    </makelayer>
    <makelayer topdir="src/org/netbeans/modules/vcs/advanced/config" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-config.xml">
       <include name="vcs/config/*.*"/>
       <exclude name="vcs/config/*_ja.*"/>
       <exclude name="vcs/config/*_XX.*"/>
    </makelayer>
    <makelayer topdir="src/org/netbeans/modules/vcs/advanced/config" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-config_ja.xml">
       <include name="vcs/config/*_ja.*"/>
    </makelayer>  
    <makelayer topdir="src/org/netbeans/modules/vcs/advanced/config" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-list.xml">
       <include name="vcs/list/*.class"/>
       <include name="vcs/list/*.java"/>
       <include name="vcs/list/*.properties"/>
    </makelayer>
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/vcsgen.jar"
         manifest="manifest-subst.mf"
         basedir="src"
         excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
	 excludes="org/netbeans/modules/vcs/advanced/config/vcs/config/*_XX.*,org/netbeans/modules/vcs/advanced/config/mf-layer_XX.xml" 
         compress="false">
      <locale name="ja"/>
      <fileset dir="src/">
        <include name="org/netbeans/modules/vcs/advanced/config/**/*.java"/>
        <include name="org/netbeans/modules/vcs/advanced/config/**/*.form"/>
      </fileset>
    </locjar>
  </target>

  <target name="netbeans" depends="jars"/>

  <target name="nbm" depends="netbeans">
    <makenbm file="vcsgen.nbm"
             topdir="."
	     manifest="manifest-subst.mf"
	     homepage="http://${homepage.base}/vcsgeneric.html"
	     distribution="${dist.base}/vcsgen.nbm">
      <license file="${license.file}"/>
      <description>
        Vcs generic module
      </description>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
        <include name="org/netbeans/modules/vcs/advanced/config/layer-include*.xml"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="vcsgen.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
  </target>

</project>
