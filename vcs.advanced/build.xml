<project name="vcsgeneric" default="netbeans" basedir=".">

  <property name="nbroot" location=".."/>
  <property name="nbext" location="${nbroot}/nbbuild"/>
  <property name="nbext_root" location="${nbroot}/nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>
  <property name="build" location="../nbbuild/netbeans"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="makelayer" classname="org.netbeans.nbbuild.MakeLayer" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="nbmerge" classname="org.netbeans.nbbuild.NbMerge" classpath="${nbext}/nbantext.jar"/>

  <patternset id="vcsgeneric.files">
    <include name="modules/vcsgen.jar"/>
  </patternset>

  <target name="compile">
    <javac srcdir="src" 
        deprecation="${build.compiler.deprecation}" 
        debug="${build.compiler.debug}"
        destdir="src"
        excludes="org/netbeans/modules/vcs/advanced/config/">
      <classpath>        
	<pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <pathelement location="${build}/lib/openide.jar"/>
        <pathelement location="${build}/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
	<pathelement location="${build}/modules/autoload/openidex.jar"/>
	<pathelement location="${build}/modules/autoload/vcscore.jar"/>
        <pathelement location="${build}/modules/diff.jar"/>
        <fileset dir="${nbroot}/core/external">
          <include name="xml-apis*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-commands.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/commands/*.class"/>
       <include name="org/netbeans/modules/vcs/profiles/commands/*.java"/>
       <include name="org/netbeans/modules/vcs/profiles/commands/*.form"/>
       <include name="org/netbeans/modules/vcs/profiles/commands/*.properties"/>
    </makelayer>
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-config.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/config/*.*"/>
       <exclude name="org/netbeans/modules/vcs/profiles/config/*_ja.*"/>
       <exclude name="org/netbeans/modules/vcs/profiles/config/*_XX.*"/>
    </makelayer>
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-config_ja.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/config/*_ja.*"/>
    </makelayer>
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-list.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/list/*.class"/>
       <include name="org/netbeans/modules/vcs/profiles/list/*.java"/>
       <include name="org/netbeans/modules/vcs/profiles/list/*.properties"/>
    </makelayer>
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/advanced/config/layer-includes-resources.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/resources/*.*"/>
    </makelayer>
    <mkdir dir="${build}/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="${build}/modules/vcsgen.jar"
         manifest="manifest-subst.mf"
         basedir="src"
         excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
	 excludes="org/netbeans/modules/vcs/advanced/config/mf-layer_XX.xml" 
         compress="false">
      <locale name="ja"/>
      <fileset dir="src/" excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt">
        <include name="org/netbeans/modules/vcs/profiles/**/*"/>
	<exclude name="org/netbeans/modules/vcs/profiles/config/*_XX.*"/>
      </fileset>
      <fileset dir="src/">
        <include name="org/netbeans/modules/vcs/profiles/**/*.java"/>
        <include name="org/netbeans/modules/vcs/profiles/**/*.form"/>
      </fileset>
    </locjar>
  </target>

  <target name="netbeans" depends="jars">
      <genlist outputfiledir="${build}" module="modules/vcsgen.jar">
          <fileset dir="${build}">
	      <patternset refID="vcsgeneric.files"/>
          </fileset>
      </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="vcsgen.nbm"
             productDir="${build}"
             module="modules/vcsgen.jar"
	     homepage="http://vcsgeneric.${homepage.base}/"
	     distribution="http://${dist.base}/vcsgen.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
        <include name="org/netbeans/modules/vcs/advanced/config/layer-include*.xml"/>
      </fileset>
      <fileset dir="${build}">
        <patternset refID="vcsgeneric.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="vcsgen.nbm"/>
    <delete dir="javadoc"/>
  </target>

  <target name="javadoc" description="Build vcsgeneric module API documentation.">
    <tstamp/>
    <property name="apis-footer" value="&lt;font size=-2 color=gray&gt;Built on ${TODAY}.&amp;nbsp;&amp;nbsp;|&amp;nbsp;&amp;nbsp;Portions Copyright 1997-2002 Sun Microsystems, Inc. All rights reserved.&lt;/font&gt;"/>
    <echo message="Build vcsgeneric module API documentation..."/>
    <mkdir dir="javadoc"/>
    <javadoc destdir="javadoc"
             packagenames="org.netbeans.modules.*,vcs.*"
             doctitle="NetBeans vcsgeneric module APIs"
             windowtitle="NetBeans vcsgeneric module APIs"
             bottom="${apis-footer}"
             use="true"
             splitindex="true"
             author="false"
             version="false"
             maxmemory="384m"
    >
      <sourcepath>
        <pathelement location="src"/>
        <pathelement location="profiles/clearcase/src"/>
        <pathelement location="profiles/cvsprofiles/src"/>
        <pathelement location="profiles/pvcs/src"/>
        <pathelement location="profiles/starteam/common"/>
        <pathelement location="profiles/vss/src"/>
      </sourcepath>
      <classpath>
	<pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <!--<pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>-->
        <fileset dir="${nbroot}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
	<pathelement location="${nbroot}/openidex/netbeans/modules/autoload/openidex.jar"/>
	<pathelement location="${nbroot}/vcscore/netbeans/modules/autoload/vcscore.jar"/>
        <pathelement location="${nbroot}/diff/netbeans/modules/diff.jar"/>
        <fileset dir="${nbroot}/core/external">
          <include name="xml-apis*.jar"/>
        </fileset>
      </classpath>
    </javadoc>    
  </target>

</project>
