<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.0//EN" "http://www.netbeans.org/dtds/filesystem-1_0.dtd" [
  <!ENTITY includefiles_commands SYSTEM "layer-includes-commands.xml">
  <!ENTITY includefiles_commands_passwd SYSTEM "layer-includes-commands-passwd.xml">
  <!ENTITY includefiles_config SYSTEM "layer-includes-config.xml">
  <!ENTITY includefiles_list SYSTEM "layer-includes-list.xml">
  <!ENTITY includefiles_resources SYSTEM "layer-includes-resources.xml">
]>
<filesystem>
  <folder name="vcs">
    <folder name="commands">
      &includefiles_commands;
      <folder name="passwd">
        &includefiles_commands_passwd;
      </folder>
    </folder>
    <folder name="config">
      &includefiles_config;
    </folder>
    <folder name="list">
      &includefiles_list;
    </folder>
    <folder name="resources">
      &includefiles_resources;
    </folder>
  </folder>

  <folder name="Templates">
     <folder name="Mount">
       <folder name="VCS">
        <file name="org-netbeans-modules-vcs-advanced-CommandLineVcsFileSystem.settings">
          <![CDATA[
          <!DOCTYPE settings PUBLIC "-//NetBeans//DTD Session settings 1.0//EN" "http://www.netbeans.org/dtds/sessionsettings-1_0.dtd">
          <settings version="1.0">
            <instanceof class="org.openide.filesystems.FileSystem"/>
            <instance class="org.netbeans.modules.vcs.advanced.CommandLineVcsFileSystem"/>
          </settings>
          ]]>
          <attr name="template" boolvalue="true"/>
          <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.vcs.advanced.config.Bundle" />
        </file>
       </folder>
     </folder>
   </folder>

    <folder name="xml">
        <!--
          This 'entities' folder represents an entity catalog realized by mapping 
          public IDs to filesystem constructs (files and folders).
        -->
        <folder name="entities">
            <folder name="NetBeans">
                <file name="DTD_VCS_Configuration_1_0" url="nbrescurr:/org/netbeans/modules/vcs/advanced/config/vcs/config/configuration-1_0.dtd" />
            </folder>
        </folder>
    </folder>

</filesystem>
