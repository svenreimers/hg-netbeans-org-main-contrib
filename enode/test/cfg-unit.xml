<!--
  These classes are excluded by default (defined by XTest):
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="enode unit test config">

    <!-- testbag with all MyModule tests running in code mode (i.e. in standard JVM)
         use ant runtests -Dxtest.attribs=stable,code to run this testbag  -->
    <testbag testattribs="all and code" executor="code" name="all tests (no ide)">
        <testset dir="unit/src">
            <patternset>
	        <!-- <include name="myorg/MyorgSuite.class"/> -->
           </patternset>
        </testset>
    </testbag>

    <!-- testbag with tests which does not fail, use ant runtests -Dxtest.attribs=stable,code -->
    <testbag testattribs="stable and code" executor="code" name="stable tests (no ide)">
        <testset dir="unit/src">
            <patternset>
	<include name="**/*Test.class"/>
<!--		<include name="myorg/HelloWorldTest.class"/>
		<exclude name="myorg/HelloWorldTest.class/testGreeting2"/>
		<include name="myorg/Hello2.class"/>
-->            </patternset>
        </testset>
    </testbag>
    
    <!-- testbag with failing test (just one method)  -->
    <testbag testattribs="failing" executor="code" name="failing tests (no ide)">
        <testset dir="unit/src">
            <patternset>
<!--                <include name="myorg/HelloWorldTest.class/testGreeting2"/>
-->            </patternset>
        </testset>
    </testbag>


    <!-- testbag with all MyModule tests running in ide mode (i.e. inside NetBeans IDE)
         use ant runtests -Dxtest.attribs=stable,ide to run this testbag  -->
    <testbag testattribs="all and ide" executor="ide" name="all tests (in ide)">
        <!--
        <testsetup dir="unit/src">
            <setup class="myorg/MySetup" method="setup"/>
            <teardown class="myorg/MySetup" method="teardown"/>
        </testsetup>
	-->
        <testset dir="unit/src">
            <patternset>
<!--                <include name="myorg/Hello2Test.class/testExpectedFailure" expectedFail="I'm expected to fail in IDE"/>
-->		<include name="**/*Test.class"/>		
<!--		<exclude name="myorg/*Suite.class"/>
-->            </patternset>
        </testset>
    </testbag>


    <!-- testbag with tests which does not fail and run in IDE, use ant runtests -Dxtest.attribs=stable,ide -->
    <testbag testattribs="stable and ide" executor="ide" name="stable tests (in ide)">
        <testset dir="unit/src">
            <patternset>
<!--		<include name="myorg/HelloWorldTest.class"/>
		<exclude name="myorg/HelloWorldTest.class/testGreeting2"/>
-->		<include name="org/netbeans/modules/enode/*Test.class"/>
<!--                <include name="myorg/Hello2Test.class/testExpectedFailure" expectedFail="I'm expected to fail in IDE"/>
-->            </patternset>
        </testset>
    </testbag>

    <!-- empty testbag - for use with xtest.includes and xtest.excludes properties -->
    <testbag testattribs="empty" executor="code" name="empty">
        <testset dir="unit/src">
            <patternset/>
        </testset>
    </testbag>

    <!-- xxxxx -->

    <compiler name="default-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    <executor name="code" antfile="build-unit.xml" target="run-unit-test"/>
    <executor name="ide" antfile="build-unit.xml" target="runidetest"/>
 
    
</mconfig>
