<!-- Special targets: vcs-apis -->

<project name="vcscore" default="netbeans" basedir=".">

  <property name="nbroot" value=".."/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" location="../nbbuild/standard-nbm-license.txt"/>
  <property name="build" location="../nbbuild/netbeans"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../nbbuild/nbantext.jar"/>

  <patternset id="vcscore.files">
    <include name="modules/autoload/vcscore.jar"/>
  </patternset>

  <target name="compile">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="${build}/modules/ext/nb-editor.jar"/>
        <pathelement location="${build}/modules/autoload/openidex.jar"/>
	<pathelement location="../openide/openide-13javac-workaround.jar"/>
        <pathelement location="${build}/lib/openide.jar"/>
        <pathelement location="${build}/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
        <pathelement location="${build}/modules/autoload/openide-io.jar"/>
        <pathelement location="${build}/modules/autoload/openide-execution.jar"/>
        <fileset dir="../core/external">
          <include name="regexp*.jar" />
        </fileset>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="${build}/modules/autoload"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="${build}/modules/autoload/vcscore.jar"
            manifest="manifest-subst.mf"
            basedir="src"
	    excludesfile="../nbbuild/standard-jar-excludes.txt"
	    compress="false">
      <locale name="ja"/>
    </locjar>
  </target>

  <!--
  <target name="javahelp">
    <copy todir="netbeans/docs">
      <fileset dir="javahelp"/>
    </copy>
  </target>
  -->
  
  <target name="netbeans" depends="jars">
      <genlist outputfiledir="${build}" module="modules/autoload/vcscore.jar">
          <fileset dir="${build}">
	      <patternset refID="vcscore.files"/>
          </fileset>
      </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="vcscore.nbm"
             productDir="${build}"
             module="modules/autoload/vcscore.jar"
	     homepage="http://vcscore.${homepage.base}/"
	     distribution="http://${dist.base}/vcscore.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <!-- VCS API documentation -->
  <target name="vcs-apis" description="Create VCS API documentation.">
    <property name="jdk-docs-location" value="http://java.sun.com/j2se/1.3/docs/api"/>
    <property name="regexp-docs-location" value="http://jakarta.apache.org/regexp/apidocs/"/>
    <property name="openide-docs-location" value="http://www.netbeans.org/download/apis/"/>
    <echo message="Build VCS API documentation..."/>
    <mkdir dir="VCSAPIs"/>
    <javadoc destdir="VCSAPIs"
             packagenames="org.netbeans.api.vcs,org.netbeans.api.vcs.commands,org.netbeans.spi.vcs,org.netbeans.spi.vcs.commands"
             doctitle="NetBeans VCS APIs"
             use="true"
             splitindex="true"
             author="false"
             version="false"
             maxmemory="64m"
    >
      <sourcepath>
        <pathelement location="api/doc"/>
        <pathelement location="src"/>
      </sourcepath>
      <classpath>
        <fileset dir="${nbroot}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
        <fileset dir="../core/external">
          <include name="regexp*.jar" />
        </fileset>
      </classpath>
      <link href="${jdk-docs-location}"
            offline="true"
            packagelistLoc="${nbroot}/openide/api/doc"
      />
      <link href="${openide-docs-location}"
            offline="true"
            packagelistLoc="api/doc/openide"
      />
    </javadoc>
    <zip zipfile="VCSAPIs.zip" basedir="VCSAPIs"/>
  </target>


  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
      <fileset dir="${build}">
        <patternset refID="vcscore.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="vcscore.nbm"/>
    <delete file="VCSAPIs.zip"/>
    <delete dir="VCSAPIs"/>
    <delete dir="javadoc"/>
  </target>

  <target name="javadoc" description="Build vcscore module API documentation." depends="vcs-apis">
    <copy todir="javadoc">
      <fileset dir=".">
        <include name="VCSAPIs/**"/>
        <include name="VCSAPIs.zip"/>
      </fileset>
    </copy>
  </target>

</project>
