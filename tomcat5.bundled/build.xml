<project name="tomcatint-tomcat5-bundled" basedir="." default="netbeans">
  <import file="../../../nbbuild/default.xml"/> 

  <property name="tomcat.filename" value="jakarta-tomcat-5.5.7"/>

  <target name="init" depends="default.init">
    <ant dir="${nb_all}/tomcatint/external" target="unscramble"/>
    <patternset id="tomcatint/tomcat5/bundled.files">
      <include name="modules/eager/tomcat5-bundled.jar"/>
      <include name="${tomcat.filename}/**"/>
    </patternset>
  </target>

  <target name="jars" depends="init">
    <mkdir dir="${cluster}/modules/eager"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="${cluster}/modules/eager/tomcat5-bundled.jar"
         manifest="manifest-subst.mf"
         basedir="src"
         excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
         compress="false">
      <include name="org/netbeans/modules/tomcat5/bundled/**"/>
    </jar>
  </target>

  <target name="release" depends="init,jars">
    <unzip src="../../external/${tomcat.filename}.zip" dest="${cluster}" />
    <!-- monitor -->
    <copy file="${schema2beans/rt.dir}/modules/org-netbeans-modules-schema2beans.jar" 
          tofile="${cluster}/jakarta-tomcat-5.5.7/common/lib/org-netbeans-modules-schema2beans.jar"/>
    <copy file="${monitor.dir}/modules/ext/org-netbeans-modules-web-httpmonitor.jar"
          tofile="${cluster}/jakarta-tomcat-5.5.7/common/lib/org-netbeans-modules-web-httpmonitor.jar"/>
    <chmod perm="ugo+x">
      <fileset dir="${cluster}/${tomcat.filename}/bin">
        <include name="*.sh"/>
      </fileset>
    </chmod>

    <!-- XXX:copy IDE-README.txt
    <copy file="torelease/IDE-README.txt" tofile="netbeans/${tomcat.filename}/IDE-README.txt" includeEmptyDirs="false"/> -->
    <!-- copy dummy to empty directories -->
    <copy file="torelease/dummy" tofile="${cluster}/${tomcat.filename}/logs/dummy" includeEmptyDirs="false"/>
    <copy file="torelease/dummy" tofile="${cluster}/${tomcat.filename}/temp/dummy" includeEmptyDirs="false"/>
    <copy file="torelease/dummy" tofile="${cluster}/${tomcat.filename}/work/dummy" includeEmptyDirs="false"/>
    <copy file="torelease/dummy" tofile="${cluster}/${tomcat.filename}/common/classes/dummy" includeEmptyDirs="false"/>
  </target>

  <target name="modulexml" depends="init">
    <mkdir dir="${cluster}/config/Modules"/>
    <createmodulexml xmldir="${cluster}/config/Modules">
      <eager dir="${cluster}">
        <include name="modules/eager/tomcat5-bundled.jar"/>
      </eager>
    </createmodulexml>
  </target>

  <target name="netbeans" depends="jars,release,modulexml" description="Builds the module">
    <genlist outputfiledir="${cluster}" module="modules/eager/tomcat5-bundled.jar">
       <fileset dir="${cluster}">
         <patternset refID="tomcatint/tomcat5/bundled.files"/>
       </fileset>
    </genlist>
  </target>

  <target name="nbm" depends="netbeans" description="Prepare the module for distribution via Auto Update.">
    <makenbm file="bundledtomcat.nbm"
           productdir="${cluster}"
           module="modules/eager/tomcat5-bundled.jar"
           homepage="http://tomcatint.${homepage.base}/"
           distribution="http://${dist.base}/bundledtomcat.nbm">
      <license name="bundledtomcat-license.txt">
        <text>For the integration module:</text>
        <file location="${license.file}"/>
        <text>For Tomcat:</text>
        <file location="${nb_all}/tomcatint/external/jakarta-tomcat-5.5.7-license.txt"/>
      </license>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean" depends="init" description="Clean all build products.">
        <delete file="manifest-subst.mf"/>
        <delete file="bundledtomcat.nbm"/>
        <delete dir="test"/>
        <delete>
          <fileset dir="${cluster}">
            <patternset refID="tomcatint/tomcat5/bundled.files"/>
          </fileset>
        </delete>
  </target>


</project>
