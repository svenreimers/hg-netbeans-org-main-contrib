<project name="tomcatint/tomcat5/bundled" basedir="." default="netbeans">

    <import file="../../../nbbuild/templates/projectized.xml"/>

    <target name="netbeans-extra" depends="build-init">
        <unzip src="../../external/${tomcat.filename}.zip" dest="${cluster}"/>
        <!-- monitor -->
        <copy file="${schema2beans/rt.dir}/modules/org-netbeans-modules-schema2beans.jar" 
            tofile="${cluster}/jakarta-tomcat-5.5.9/common/lib/org-netbeans-modules-schema2beans.jar"/>
        <copy file="${monitor.dir}/modules/ext/org-netbeans-modules-web-httpmonitor.jar"
            tofile="${cluster}/jakarta-tomcat-5.5.9/common/lib/org-netbeans-modules-web-httpmonitor.jar"/>
        <chmod perm="ugo+x">
            <fileset dir="${cluster}/${tomcat.filename}/bin">
                <include name="*.sh"/>
            </fileset>
        </chmod>

        <!-- XXX:copy IDE-README.txt
        <copy file="torelease/IDE-README.txt" tofile="netbeans/${tomcat.filename}/IDE-README.txt" includeEmptyDirs="false"/> -->
        <mkdir dir="${cluster}/${tomcat.filename}/logs"/>
        <echo file="${cluster}/${tomcat.filename}/logs/dummy"/>
        <mkdir dir="${cluster}/${tomcat.filename}/temp"/>
        <echo file="${cluster}/${tomcat.filename}/temp/dummy"/>
        <mkdir dir="${cluster}/${tomcat.filename}/work"/>
        <echo file="${cluster}/${tomcat.filename}/work/dummy"/>
        <mkdir dir="${cluster}/${tomcat.filename}/common/classes"/>
        <echo file="${cluster}/${tomcat.filename}/common/classes/dummy"/>
    </target>

    <target name="nbm" depends="init,netbeans,-nbm-prompt-for-storepass" description="Build NBM archive.">
        <mkdir dir="build"/>
        <property name="nbm.target.cluster" value=""/> <!-- fallback -->        
        <makenbm file="build/${nbm}"
                 productdir="${cluster}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="${nbm.distribution}"
                 needsrestart="${nbm.needs.restart}"
                 global="${nbm.is.global}"
                 releasedate="${nbm.release.date}"
		 moduleauthor="${nbm.module.author}"
                 targetcluster="${nbm.target.cluster}">
            <license>
                <text>For the integration module:</text>
                <file location="${license.file}"/>
                <text>For Tomcat:</text>
                <file location="../../external/jakarta-tomcat-5.5.9-license.txt"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

</project>
