<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:ldap="http://schemas.sun.com/jbi/wsdl-extensions/ldap/" targetNamespace="http://schemas.sun.com/jbi/wsdl-extensions/ldap/">
	<xs:import namespace="http://schemas.xmlsoap.org/wsdl/" schemaLocation="wsdl.xsd"/>
	<xs:element name="binding" type="ldap:tBinding">
		<xs:annotation>
			<xs:documentation>
	      	"binding" indicates a ldap protocol based binding.
	      </xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:complexType name="tBinding">
		<xs:complexContent>
			<xs:extension base="wsdl:tExtensibilityElement"/>
			<!-- could add more attributes to the binding -->
		</xs:complexContent>
	</xs:complexType>
	<xs:element name="operation" type="ldap:tOperation"/>
	<xs:complexType name="tOperation">
		<xs:annotation>
			<xs:documentation>
	      	"operation" defines the ldap protocol based operation binding details..
	      </xs:documentation>
		</xs:annotation>
	</xs:complexType>
	
	<xs:simpleType name="operationTypes">
		<xs:restriction base="xs:string">
			<xs:enumeration value="searchRequest"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:element name="input" type="ldap:tInput">
		<xs:annotation>
			<xs:documentation>
	      	"input" defines the ldap protocol based operation input binding details
	      </xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:complexType name="tInput">
		<xs:complexContent>
			<xs:extension base="wsdl:tExtensibilityElement">				
				<xs:attribute name="operationType" type="ldap:operationTypes" use="required">
					<xs:annotation>
						<xs:documentation>Defines the ldap operation type valid values are Search</xs:documentation>
					</xs:annotation>
				</xs:attribute>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>	
	<xs:element name="output" type="ldap:tOutput">
		<xs:annotation>
			<xs:documentation>
	      	"output" defines the ldap protocol based operation output binding details
	      </xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:complexType name="tOutput">
		<xs:complexContent>
			<xs:extension base="wsdl:tExtensibilityElement">
				<xs:attribute name="returnPartName" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>Defines the message part name which is returned. Used in Search operation.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="attributes" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>Defines list of attributes to be retrieved</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:element name="address" type="ldap:tAddress">
		<xs:annotation>
			<xs:documentation>
	      	"address" indicates a ldap protocol based service address.
	      </xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:complexType name="tAddress">
		<xs:complexContent>
			<xs:extension base="wsdl:tExtensibilityElement">
				<xs:attribute name="location" type="xs:string" use="required">
					<xs:annotation>
						<xs:documentation>Defines LDAP server url address.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
</xs:schema>
