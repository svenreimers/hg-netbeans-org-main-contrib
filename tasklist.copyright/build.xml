--><project basedir="." default="netbeans" name="tasklist/copyright">

    <property name="nb_all" value="../.."/>

    <taskdef classname="org.netbeans.nbbuild.MakeNBM" classpath="${nb_all}/nbbuild/nbantext.jar" name="makenbm"/>
    <taskdef classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nb_all}/nbbuild/nbantext.jar" name="genlist"/>
    <taskdef classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nb_all}/nbbuild/nbantext.jar" name="locjar"/>

    <property name="nbm_alias" value="nb_ide"/>
    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" value="${nb_all}/nbbuild/standard-nbm-license.txt"/>
    <property file="../version.properties"/>
  
    <target name="compile">
        <javac debug="${build.compiler.debug}" deprecation="${build.compiler.deprecation}" destdir="src" source="1.4" srcdir="src">
            <classpath>
                <pathelement location="${nb_all}/openide/openide-13javac-workaround.jar"/>
                <pathelement location="${nb_all}/openide/netbeans/lib/openide.jar"/>
                <pathelement location="${nb_all}/openide/loaders/netbeans/lib/openide-loaders.jar"/>
                <!-- tasklist api (not yet packaged) -->
                <pathelement path="../api/src"/>
                <!-- tasklist core (net yet packaged) -->
                <pathelement path="../core/src"/>
                <pathelement location="../../editor/netbeans/modules/ext/nb-editor.jar"/>
               <pathelement location="../../editor/netbeans/modules/editor.jar"/>
            </classpath>
        </javac>
    </target>

    <target depends="compile" name="jars">
        <mkdir dir="netbeans/modules"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <filter filtersfile="../version.properties"/>
        <filter token="tl.copyright.spec" value="${tl.copyright.spec}"/>
        <copy file="manifest.mf" filtering="on" tofile="manifest-subst.mf"/>
        <locjar basedir="src" compress="false" excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt" jarfile="netbeans/modules/tasklist-copyright.jar" manifest="manifest-subst.mf">
            <locale name="ja"/>
        </locjar>
    </target>

    <target depends="jars" name="netbeans">
        <genlist outputfiledir="netbeans" targetname="nbm"/>
    </target>

    <target depends="netbeans" name="nbm">
        <makenbm distribution="http://${dist.base}/tasklist-copyright.nbm" file="../tasklist-copyright.nbm" 
            homepage="http://tasklist.${homepage.base}/updates/tasklist-copyright.html" 
            module="netbeans/modules/tasklist-copyright.jar" 
            needsrestart="false" topdir=".">
            <license file="${license.file}"/>
            <signature alias="${nbm_alias}" keystore="${keystore}" storepass="${storepass}"/>
        </makenbm>
    </target>
  
    <target name="changelog">
        <style in="module-updates.xml" out="../www/updates/tasklist-copyright.html" style="../www/updates/updates.xsl"/>
    </target>
    
    <target name="clean">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="../tasklist-copyright.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
        <delete dir="javadoc"/>
    </target>

    <target name="release">
    </target>

    <target name="javahelp">
    </target>

    <!-- This target will only work *inside* the IDE! -->
    <target depends="jars" description="Test the module inside the running IDE." name="test">
       <nbinstaller action="reinstall" module="netbeans/modules/tasklist-copyright.jar"/>
    </target>
</project>
