--><project basedir="." default="netbeans" name="tasklist/copyright">

    <import file="../../nbbuild/default.xml"/>

    <property file="../version.properties"/>

    <target name="init" depends="default.init">
      <patternset id="tasklist/copyright.files">
        <include name="${nb.modules.dir}/tasklist-copyright.jar"/>
      </patternset>
      
      <path id="cp">
        <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
        <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar"/>
        <pathelement path="${tasklist/api.dir}/${nb.modules/autoload.dir}/tasklist-api.jar"/>
        <pathelement path="${tasklist/core.dir}/${nb.modules/autoload.dir}/tasklist-core.jar"/>
        <pathelement location="${editor.dir}/${nb.modules.dir}/ext/nb-editor.jar"/>
        <pathelement location="${editor.dir}/${nb.modules.dir}/editor.jar"/>
      </path>
    </target>
  
    <target name="compile" depends="init">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}" source="1.4">
            <classpath refID="cp"/>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <filter filtersfile="../version.properties"/>
        <filter token="tl.copyright.spec" value="${tl.copyright.spec}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/tasklist-copyright.jar"
             manifest="manifest-subst.mf"
             basedir="src"
	     excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
	     compress="false"/>
    </target>

    <target name="netbeans" depends="jars, simulate_module_autorecognition">
        <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules.dir}/tasklist-copyright.jar">
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <patternset refID="tasklist/copyright.files"/>
           </fileset>
        </genlist>
    </target>

    <!--
        NetBeans 4.0 is not able to generate this information in runtime anymore.
        Missing information confuses system (and users).
        It's done for standard distribution on centralized place in nbbuild/build.xml.
    -->
    <target name="simulate_module_autorecognition">

        <echo message="Simulating module autorecognition in ${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules ..."/>

        <taskdef name="createmodulexml" classname="org.netbeans.nbbuild.CreateModuleXML" classpath="../../nbbuild/nbantext.jar"/>

        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules"/>
        <createmodulexml xmldir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules">
          <!--enabled dir="${netbeans.dest.dir}/${one.cluster.dir}">
            <include name="${nb.modules.dir}/*.jar"/>
          </enabled>
          <autoload dir="${netbeans.dest.dir}/${one.cluster.dir}">
            <include name="${nb.modules/autoload.dir}/*.jar"/>
          </autoload-->
          <eager dir="${netbeans.dest.dir}/${cluster.dir}">
            <include name="${nb.modules.dir}/tasklist-copyright.jar"/>
          </eager>
        </createmodulexml>
    </target>


    <target name="nbm" depends="netbeans">
        <makenbm distribution="http://${dist.base}/tasklist-copyright.nbm" file="tasklist-copyright.nbm" 
            homepage="http://tasklist.${homepage.base}/updates/tasklist-copyright.html" 
            productdir="${netbeans.dest.dir}/${cluster.dir}"
            module="${nb.modules.dir}/tasklist-copyright.jar" 
            needsrestart="false">
            <license file="${license.file}"/>
            <signature alias="${nbm_alias}" keystore="${keystore}" storepass="${storepass}"/>
        </makenbm>
    </target>
  
    <target name="changelog">
        <style in="module-updates.xml" out="../www/updates/tasklist-copyright.html" style="../www/updates/updates.xsl"/>
    </target>
    
    <target name="clean" depends="init">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
               <patternset refID="tasklist/copyright.files"/>
            </fileset>
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="tasklist-copyright.nbm"/>
        <delete dir="javadoc"/>
    </target>

    <target name="release">
    </target>

    <target name="javahelp">
    </target>

    <!-- This target will only work *inside* the IDE! -->
    <target name="test" depends="jars" description="Test the module inside the running IDE.">
       <nbinstaller action="reinstall" module="netbeans/modules/tasklist-copyright.jar"/>
    </target>
</project>
