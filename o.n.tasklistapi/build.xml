<project name="tasklist/api" default="netbeans" basedir=".">
    <property file="../version.properties"/>
    <property name="manifest.mf" location="manifest-subst.mf"/>
    <import file="../../nbbuild/templates/projectized.xml"/>
    
    <target name="jar-prep" depends="projectized.jar-prep">
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <filter filtersfile="../version.properties"/>
        <filter token="tl.api.spec" value="${tl.api.spec}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    </target>
    
    <target name="changelog">
        <style in="module-updates.xml" out="../www/updates/tasklist-api.html" 
            style="../www/updates/updates.xsl"/>
    </target>
    
    <target name="clean" depends="projectized.clean">
        <delete file="manifest-subst.mf"/>
    </target>
    
    <!-- Diabled as API leave official package -->
    <target name="x-javadoc" description="Build Javadoc.">
        <ant dir="${nb_all}/nbbuild/javadoctools" antfile="template.xml" target="javadoc">
            <property name="javadoc.base" location="."/>
            <property name="javadoc.name" value="TasklistAPI"/>
            <property name="javadoc.title" value="Tasklist API"/>
            <property name="javadoc.packages" value="org.netbeans.api.tasklist,org.netbeans.spi.tasklist"/>
            <property name="javadoc.classpath" refid="cp"/>
            <property name="javadoc.overview" value="doc/overview.html"/>
            <property name="javadoc.docfiles" location="doc"/>
            <property name="javadoc.header" value='&lt;font color="red"&gt;This is a preliminary version of APIs.&lt;br&gt;Listed APIs are subject to change.&lt;/font&gt;'/>
        </ant>
    </target>
    
    <target name="pmd-check">
        <taskdef name="pmd" classname="net.sourceforge.pmd.ant.PMDTask">
            <classpath>
                <fileset dir="C:\Programme\pmd-2.0\lib\">
                    <include name="*.jar"></include>
                </fileset>
            </classpath>
        </taskdef>
        <pmd printtoconsole="true" shortfilenames="true"  
            rulesetfiles="rulesets/imports.xml,
                rulesets/unusedcode.xml,
                rulesets/basic.xml">
            <formatter type="text" tofile="pmd_report.txt"/>
            <fileset dir="src">
                <include name="**/*.java"/>
            </fileset>
        </pmd>
    </target>
</project>
