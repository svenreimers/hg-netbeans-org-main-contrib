<project name="mdr/test-unit" basedir="." default="all">

    <import file="../../../nbbuild/templates/xtest-unit.xml"/>

    <path id="compiletest.classpath">
        <pathelement location="${mdr.dir}/${nb.modules.dir}/ext/mdr.jar"/>
        <pathelement location="${mdr.dir}/${nb.modules.dir}/ext/mof.jar"/>
        <pathelement location="${mdr.dir}/${nb.modules.dir}/ext/jmi.jar"/>
        <pathelement location="${mdr.dir}/${nb.modules.dir}/ext/jmiutils.jar"/>
        <pathelement location="${mdr.dir}/${nb.modules.dir}/org-netbeans-api-mdr.jar"/>
        <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
    </path>

    <target name="unit-compiler">
        <buildTests srcDir="unit/src" compileexcludes="**/data/**">
            <classpath refid="compiletest.classpath"/>
        </buildTests>
    </target>

</project>
