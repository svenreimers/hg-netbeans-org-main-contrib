<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MIME-resolver PUBLIC "-//NetBeans//DTD MIME Resolver 1.0//EN" "http://www.netbeans.org/dtds/mime-resolver-1_0.dtd">
<MIME-resolver>

    <file>
        <ext name="edm"/>
         <resolver mime="text/x-mashup+xml"/>       
    </file>   
    <!-- any .xml file which is mashup -->
    <file>
        <ext name="xml"/>
        <resolver mime="text/x-mashup+xml">
            <xml-rule>
                <element name="mashupDefinition" />
            </xml-rule>
        </resolver>
    </file>
</MIME-resolver>