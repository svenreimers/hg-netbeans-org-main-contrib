<project name="outline" default="beanjar" basedir=".">
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../../nbbuild/standard-nbm-license.txt"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../../nbbuild/nbantext.jar"/>

  <target name="compile-bean" description="Compile the Outline sources">
    <javac srcdir="src" source="1.4" destdir="src" deprecation="${build.compiler.deprecation}" debug="true" verbose="false">
      <classpath>
        <pathelement location="src"/>
        
        <!--XXX include openide.jar for now - the demo apps use,
         i.e., Utilities.toObjectArray() -->
        
        <fileset dir="../../openide/netbeans/lib">
           <include name="openide*.jar" />
         </fileset>
      </classpath>
    </javac>
  </target>
  
  <target name="beanjar" depends="compile-bean" description="Build a standard java bean library jar containing the Outline component and its models">
    <locjar jarfile="outline-bean.jar"
            manifest="bean-manifest.mf"
            basedir="src"
            excludesfile="../../nbbuild/standard-jar-excludes.txt"
            compress="false">
      <locale name="ja"/>
    </locjar>
  </target>
  
  <target name="real-clean" depends="clean,clean-javadoc"/>
  
  <target name="clean-javadoc">
    <delete dir="JavaAPIs"/>
    <delete file="JavaAPIs.zip"/>
    <delete dir="javadoc"/>
  </target>  
  
  <target name="javadoc" depends="clean-javadoc,build-javadoc"  description="Build and zip outline javadoc">
    <copy todir="javadoc">
      <fileset dir=".">
        <include name="javadoc/**"/>
        <include name="outline-docs.zip"/>
      </fileset>
    </copy>
  </target>  
  
  <target name="build-javadoc">
    <tstamp/>
    <property name="apis-footer" value="&lt;font size=-2 color=gray&gt;Built on ${TODAY}.&amp;nbsp;&amp;nbsp;|&amp;nbsp;&amp;nbsp;Portions Copyright 1997-2003 Sun Microsystems, Inc. All rights reserved.&lt;/font&gt;"/>
    <echo message="Build java module API documentation..."/>
    <delete dir="javadoc"/>
    <mkdir dir="javadoc"/>
    <javadoc destdir="javadoc"
             packagenames="org.netbeans.swing.outline"
	     doctitle="NetBeans Outline (tree table) API"
             windowtitle="NetBeans Outline (tree table) API"
             bottom="${apis-footer}"
             use="true"
             splitindex="true"
             author="true"
             version="false"
             maxmemory="384m"
             source="1.4"
    >
      <sourcepath>
        <pathelement location="src"/>
      </sourcepath>
      <!--<classpath refid="java-cp"/>-->
    </javadoc>
    <zip zipfile="outline-docs.zip" basedir="javadoc"/>
  </target>  

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>
    </delete>
    <delete file="outline-bean.jar"/>
  </target>

</project>

