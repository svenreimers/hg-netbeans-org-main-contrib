<project name="metrics" basedir="." default="netbeans">

  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="license.file" location="../nbbuild/standard-nbm-license.txt"/>

  <property name="build" location="../nbbuild/netbeans"/>
  <property name="nbm_alias" value="nb_ide"/>

  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>

  <patternset id="metrics.files">
    <include name="modules/metrics.jar"/>
  </patternset>

  <target name="compile" depends="check-root">
    <javac srcdir="src" destdir="src" deprecation="true"
     debug="${build.compiler.debug}"> 
     <classpath>
       <pathelement location="../openide/openide-13javac-workaround.jar"/>
       <pathelement location="${build}/lib/openide.jar"/>
       <pathelement location="${build}/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
       <pathelement location="${build}/modules/autoload/java-src-model.jar"/>
       <pathelement location="${build}/modules/java.jar" />
       <pathelement location="${build}/modules/clazz.jar" />
       <pathelement location="${build}/modules/autoload/classfile.jar" />
       <pathelement location="${build}/modules/autoload/java-api.jar"/>
       <fileset dir="../core/external">
         <include name="xml-apis*.jar"/>
       </fileset>
    </classpath>
    </javac>
  </target>

       
  <target name="jars" depends="compile">
    <mkdir dir="${build}/modules" />
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="${build}/modules/metrics.jar" 
     manifest="manifest-subst.mf" 
     basedir="src" 
     excludesfile="jar-excludes.txt" 
     compress="false"/>
  </target>

  <target name="netbeans" depends="jars">
      <genlist outputfiledir="${build}" module="modules/metrics.jar">
          <fileset dir="${build}">
	      <patternset refID="metrics.files"/>
          </fileset>
      </genlist>
  </target>

  <target name="check-root" depends="check-root-file" unless="root-specified">
     <fail message="Environment variable NB_ROOT invalid or not set."/>
  </target>
  <target name="check-root-file">
     <available property="root-specified" file="../nbbuild/build.xml"/>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
      <fileset dir="${build}">
        <patternset refID="metrics.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="metrics.nbm"/>
  </target>

  <target name="real-clean" depends="clean">
  </target>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>
  <target name="nbm" depends="netbeans">
    <makenbm file="metrics.nbm"
             productDir="${build}"
             module="modules/metrics.jar"
	     homepage="http://metrics.${homepage.base}/"
	     distribution="http://${dist.base}/metrics.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

</project>
