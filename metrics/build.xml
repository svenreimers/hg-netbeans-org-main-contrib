<project name="metrics" basedir="." default="netbeans">

  <!-- property environment doesn't work on large environments
       on Solaris when using Ant 1.3 and JDK 1.3.1_03 + 1.4.0_01 -->
  <!-- <property environment="env"/> -->

  <target name="compile" depends="check-root">
    <javac srcdir="src" destdir="src" 
     deprecation="${build.compiler.deprecation}" 
     debug="${build.compiler.debug}"> 
     <classpath>
       <pathelement location="../openide/openide-13javac-workaround.jar"/>
       <fileset dir="../openide/netbeans/lib">
         <include name="openide*.jar" />
       </fileset>
       <pathelement location="../java/netbeans/modules/java.jar" />
       <pathelement location="../clazz/netbeans/modules/clazz.jar" />
       <pathelement location="../classfile/netbeans/modules/autoload/classfile.jar" />
       <pathelement location="${binroot}/core/release/lib/ext/xml-apis.jar" />
    </classpath>
    </javac>
  </target>

       
  <target name="jars" depends="compile">
    <mkdir dir="netbeans/modules" />
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="netbeans/modules/metrics.jar" 
     manifest="manifest-subst.mf" 
     basedir="src" 
     excludesfile="jar-excludes.txt" 
     compress="false"/>
  </target>

  <target name="netbeans" depends="jars"/>

  <target name="check-root" depends="check-root-file" unless="root-specified">
     <fail message="Environment variable NB_ROOT invalid or not set."/>
  </target>
  <target name="check-root-file">
     <available property="root-specified" file="../nbbuild/build.xml"/>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="metrics.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
  </target>

  <target name="real-clean" depends="clean">
  </target>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>
  <target name="nbm" depends="netbeans">
    <makenbm file="metrics.nbm"
             topdir="."
             module="netbeans/modules/metrics.jar"
	     homepage="http://www.netbeans.org"
	     distribution="http://www.netbeans.org/download/nbms/40/metrics.nbm">
      <license file="../nbbuild/standard-nbm-license.txt"/>
      <!--signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"-->
    </makenbm>
  </target>

</project>
