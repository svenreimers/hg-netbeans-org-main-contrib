<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:email="http://schemas.sun.com/jbi/wsdl-extensions/email/" targetNamespace="http://schemas.sun.com/jbi/wsdl-extensions/email/">
    <xs:import namespace="http://schemas.xmlsoap.org/wsdl/" schemaLocation="wsdl.xsd"/>
       

    <!-- Extensibility Element for the WSDL Binding -->
    
    <xs:element name="IMAPbinding" type="email:tBinding">
        <xs:annotation>
            <xs:documentation>
            "binding" indicates a email protocol based binding.
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tBinding">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

     <!-- Extensibility Element for the WSDL Operation -->
    
    <xs:element name="IMAPoperation" type="email:tOperation">
        <xs:annotation>
            <xs:documentation>
            "operation" indicates a imap protocol based operation.
          </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tOperation">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <!-- Extensibility Element for the WSDL Operation Input -->
   
    <xs:element name="IMAPinput" type="email:tInput">
        <xs:annotation>
            <xs:documentation>
            "input" indicates a email protocol based operation input.
            </xs:documentation>
	<xs:appinfo>
                <prop:ElementProperties  xmlns:prop="http://xml.netbeans.org/schema/wsdlui/property">
                    <prop:Property attributeName="message" propertyOrder="1" >
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
		 <prop:Property attributeName="subject" propertyOrder="2" >
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
                  <prop:Property attributeName="from"  propertyOrder="3">
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                  </prop:Property>
                  <prop:Property attributeName="to" propertyOrder="4">
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                  </prop:Property>
                  <prop:Property attributeName="cc"  propertyOrder="5">
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                  </prop:Property>
                  <prop:Property attributeName="bcc" propertyOrder="6">
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
                </prop:ElementProperties>
            </xs:appinfo>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tInput">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
                <xs:attribute name="message" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the email message to be sent.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="subject" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the subject of the email message.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="from" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the sender of the email message.  This is generally an email address</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="to" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Specifies to whom the mail is addressed . </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="cc" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Specifies to whom the mail is addressed in the  cc field . </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
		<xs:attribute name="bcc" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Specifies to whom the mail is addressed in bcc. </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <!-- Extensibility Element for the WSDL Port -->
    
   
    <xs:element name="IMAPaddress" type="email:tAddressimap">
        <xs:annotation>
            <xs:documentation>
            "address" indicates a email protocol based service address.
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tAddressimap">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
		<xs:attribute name="emailServer" type="xs:string" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies the email server to use to route email messages</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="port" type="xs:int" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies the email server's port  to route email messages</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="userName" type="xs:string" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies the username for the emailserver to send mail</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
		<xs:attribute name="password" type="xs:string" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies the password to connect to the emailserver</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
		<xs:attribute name="useSSL" type="xs:boolean" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies whether to use ssl for connection</xs:documentation>
                    </xs:annotation>
                    </xs:attribute>
                 <xs:attribute name="mailFolder" type="xs:string" use="optional">
		    <xs:annotation>
                        <xs:documentation>The folder in the EMAIL server to poll for new messages</xs:documentation>
                    </xs:annotation> 
                  </xs:attribute>
                  <xs:attribute name="maxMessages" type="xs:int" use="optional">
		    <xs:annotation>
                        <xs:documentation>The folder in the EMAIL server to poll for new messages</xs:documentation>
                    </xs:annotation> 
                  </xs:attribute>
                <xs:attribute name="messageAckMode" type="email:modeTypes" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies Message ack based on the response from NMR</xs:documentation>
                    </xs:annotation>
                 </xs:attribute>
                 <xs:attribute name="messageAckOperation" type="email:ackOperation" use="optional">
		    <xs:annotation>
                        <xs:documentation>operation used to acknowledge the message</xs:documentation>
                    </xs:annotation>
                  </xs:attribute>
                <xs:attribute name="pollingInterval" type="xs:string" use="optional">
		    <xs:annotation>
                        <xs:documentation>Interval between EMAIL server pols for new messages</xs:documentation>
                    </xs:annotation>
                 </xs:attribute>     
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:simpleType name="modeTypes">
        <xs:restriction base="xs:string">
	    <xs:enumeration value="automatic"/>
	    <xs:enumeration value="manual"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="ackOperation">
        <xs:restriction base="xs:string">
	    <xs:enumeration value="delete"/>
	    <xs:enumeration value="markAsRead"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>
