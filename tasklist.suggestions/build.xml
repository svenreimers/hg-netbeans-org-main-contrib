<project name="tasklist/suggestions/ui" default="netbeans" basedir=".">

    <!-- 
      Sole purpose of this build stript is to package subset
      of parent build.xml produced classed into seperate jar and nbm.

      It's NetBeans nbbuild contraint that one build.xml
      can produce just one NBM.
    -->

    <property name="nb_all" location="../../.."/>

    <import file="${nb_all}/nbbuild/default.xml"/>    
    <property file="../../version.properties"/>
  
    <target name="compile">        
         <ant dir=".." target="compile"/>
    </target>

    <target name="init" depends="default.init">
      <patternset id="tasklist/suggestions/ui.files">
        <include name="${nb.modules.dir}/tasklist-suggestions.jar"/>
      </patternset>
    </target>
    
    <target name="jars" depends="compile, init">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <filter filtersfile="../../version.properties"/>
        <filter token="tl.suggestions_ui.spec" value="${tl.suggestions_ui.spec}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <echo message="Packaging to : ${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/tasklist-suggestions.jar"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/tasklist-suggestions.jar"
                manifest="manifest-subst.mf"
                basedir="../src"
	        excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
	        compress="false">
            <include name="org/netbeans/modules/tasklist/suggestions/ui/*"/>
        </jar>
    </target>

    <target name="netbeans" depends="jars, simulate_module_autorecognition">
        <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules.dir}/tasklist-suggestions.jar">
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <patternset refID="tasklist/suggestions/ui.files"/>
           </fileset>
        </genlist>
    </target>
    
    <target name="nbm" depends="netbeans">
        <makenbm file="tasklist-suggestions.nbm"
                 productdir="${netbeans.dest.dir}/${cluster.dir}"
                 module="${nb.modules.dir}/tasklist-suggestions.jar"
                 homepage="http://tasklist.${homepage.base}/updates/tasklist-suggestions.html"
                 distribution="http://${dist.base}/tasklist-suggestions.nbm"
                 needsrestart="false">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>
  
    <target name="changelog">
        <style in="module-updates.xml" out="../../www/updates/tasklist-suggestions.html" style="../../www/updates/updates.xsl"/>
    </target>
 
    <!--
        NetBeans 4.0 is not able to generate this information in runtime anymore.
        Missing information confuses system (and users).
        It's done for standard distribution on centralized place in nbbuild/build.xml.
    -->
    <target name="simulate_module_autorecognition">

        <echo message="Simulating module autorecognition in ${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules ..."/>

        <taskdef name="createmodulexml" classname="org.netbeans.nbbuild.CreateModuleXML" classpath="../../../nbbuild/nbantext.jar"/>

        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules"/>
        <createmodulexml xmldir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules">
          <!--enabled dir="${netbeans.dest.dir}/${one.cluster.dir}">
            <include name="${nb.modules.dir}/*.jar"/>
          </enabled>
          <autoload dir="${netbeans.dest.dir}/${one.cluster.dir}">
            <include name="${nb.modules/autoload.dir}/*.jar"/>
          </autoload-->
          <eager dir="${netbeans.dest.dir}/${cluster.dir}">
            <include name="${nb.modules.dir}/tasklist-suggestions.jar"/>
          </eager>
        </createmodulexml>
    </target>

   
    <target name="clean" depends="init">
        <delete>
            <fileset dir="../src">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
               <patternset refID="tasklist/suggestions/ui.files"/>
            </fileset>            
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="tasklist-suggestions.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
        <delete dir="javadoc"/>
    </target>

    <target name="release">
    </target>

    <target name="javahelp">
    </target>
</project>
