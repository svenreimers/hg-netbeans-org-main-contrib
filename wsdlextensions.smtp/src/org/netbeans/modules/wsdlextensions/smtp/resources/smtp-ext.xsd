<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:smtp="http://schemas.sun.com/jbi/wsdl-extensions/smtp/" targetNamespace="http://schemas.sun.com/jbi/wsdl-extensions/smtp/">
    <xs:import namespace="http://schemas.xmlsoap.org/wsdl/" schemaLocation="wsdl.xsd"/>

    <!-- Extensibility Element for the WSDL Binding -->
    <xs:element name="binding" type="smtp:tBinding">
        <xs:annotation>
            <xs:documentation>
            "binding" indicates a smtp protocol based binding.
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tBinding">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
                <xs:sequence>
                    <xs:element ref="smtp:proxy" minOccurs="0" />
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:element name="proxy" type="smtp:tProxy">
        <xs:annotation>
            <xs:documentation>
            "operation" indicates a smtp protocol based operation.
          </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tProxy">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
                <xs:attribute name="host" type="xs:string" use="required">
                    <xs:annotation>
                        <xs:documentation>The host for sending SMTP messages.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="port" type="xs:int" use="optional">
                    <xs:annotation>
                        <xs:documentation>The port used for sending SMTP messages.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="userName" type="xs:string" use="required">
                    <xs:annotation>
                        <xs:documentation>The username for sending SMTP messages.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="password" type="xs:string" use="required">
                    <xs:annotation>
                        <xs:documentation>The password for sending SMTP messages.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    


    <!-- Extensibility Element for the WSDL Operation -->
    <xs:element name="operation" type="smtp:tOperation">
        <xs:annotation>
            <xs:documentation>
            "operation" indicates a smtp protocol based operation.
          </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tOperation">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <!-- Extensibility Element for the WSDL Operation Input -->
    <xs:element name="input" type="smtp:tInput">
        <xs:annotation>
            <xs:documentation>
            "input" indicates a smtp protocol based operation input.
          </xs:documentation>
	<xs:appinfo>
                <prop:ElementProperties  xmlns:prop="http://xml.netbeans.org/schema/wsdlui/property">
                    <prop:Property attributeName="message" propertyOrder="1" >
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
                    
                    <prop:Property attributeName="subject" propertyOrder="2" >
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
                    <prop:Property attributeName="from"  propertyOrder="3">
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
                    <prop:Property attributeName="charset" propertyOrder="4">
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
                    <prop:Property attributeName="to" propertyOrder="5">
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
                    <prop:Property attributeName="cc"  propertyOrder="6">
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
                    
                    <prop:Property attributeName="bcc" propertyOrder="7">
                        <prop:BuiltInCustomizer>
                            <prop:SimpleCustomizer name="PartChooser"/>
                        </prop:BuiltInCustomizer>
                    </prop:Property>
                </prop:ElementProperties>
            </xs:appinfo>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tInput">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
                <xs:sequence>
                    <xs:element ref="smtp:attachment" minOccurs="0" maxOccurs="unbounded"/>
                </xs:sequence>
                <xs:attribute name="message" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the SMTP message to be sent.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="subject" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the subject of the SMTP message.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="from" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the sender of the SMTP message.  This is generally an email address</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="charset" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the character set of the SMTP message.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="use" type="smtp:useTypes" use="optional">
                    <xs:annotation>
                        <xs:documentation>Refers to the use type. Whether encoder or literal.</xs:documentation>
                    </xs:annotation>
		</xs:attribute>
                <xs:attribute name="encodingStyle" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Specifies the encoding type associated with the SMTP Message. This also defines the encoder type responsible to process the encoded data. </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="to" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Specifies to whom the mail is addressed . </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="cc" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Specifies to whom the mail is addressed in the  cc field . </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
		<xs:attribute name="bcc" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation>Specifies to whom the mail is addressed in bcc. </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:simpleType name="useTypes">
        <xs:restriction base="xs:string">
	    <xs:enumeration value="literal"/>
	    <xs:enumeration value="encoded"/>
        </xs:restriction>
    </xs:simpleType>
    <!-- Extensibility Element for the WSDL Operation Output -->
    <xs:element name="output" type="smtp:tOutput">
        <xs:annotation>
            <xs:documentation>
            "output" indicates a smtp protocol based operation output.
          </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tOutput">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <!-- Common message types for Input/Output Binding Elements -->

    <!-- Attachment(s) definition -->
    <xs:element name="attachment" type="smtp:tAttachment">
        <xs:annotation>
            <xs:documentation>
            "attachment" is an attachment to an SMTP message
          </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tAttachment">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
                <xs:attribute name="contentType" type="xs:string" use="required" >
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the content type of the attachment</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="name" type="xs:string" use="required">
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the name of the attachment</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="content" type="xs:string" use="required">
                    <xs:annotation>
                        <xs:documentation>Refers to the message part containing the contents of the attachment</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
            <!-- TODO: refer to part -->
            <!-- TODO: restrict types-->
        </xs:complexContent>
    </xs:complexType>

    <!-- Extensibility Element for the WSDL Port -->
    <xs:element name="address" type="smtp:tAddress">
        <xs:annotation>
            <xs:documentation>
            "address" indicates a smtp protocol based service address.
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:complexType name="tAddress">
        <xs:complexContent>
            <xs:extension base="wsdl:tExtensibilityElement">
		<xs:attribute name="location" type="xs:string" use="required">
		    <xs:annotation>
                        <xs:documentation>Specifies the location of the receiver using the standard "mailto" URL Scheme (RFC 2368) </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
		<xs:attribute name="smtpserver" type="xs:string" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies the SMTP server to use to route SMTP messages</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="smtpport" type="xs:int" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies the SMTP server's port  to route SMTP messages</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="username" type="xs:string" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies the username for the smtpserver to send mail</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
		<xs:attribute name="password" type="xs:string" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies the password to connect to the SMTPserver</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
		<xs:attribute name="useSSL" type="xs:boolean" use="optional">
		    <xs:annotation>
                        <xs:documentation>Specifies whether to use ssl for connection</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
</xs:schema>
