<project name="tasklist/pmd" default="netbeans" basedir=".">

    <import file="../../nbbuild/default.xml"/>

    <property name="nb_all" value="../.."/>
    
    <property file="../version.properties"/>

    <!-- TODO Remove this when the module is part of the full tasklist build -->
    <property name="build.compiler.debug" value="on"/>

    <target name="init" depends="default.init">
        <property name="nb-pmd" location="${nb_all}/contrib/pmd-nb-wrapper"/>
        <ant dir="${nb-pmd}" target="netbeans"/>
        <path id="pmd.cp">
            <pathelement location="${nb-pmd}/netbeans/modules/pmd.jar"/>
            <fileset dir="${nb-pmd}/netbeans/modules/ext">
                <include name="pmd-*.jar"/>
            </fileset>
        </path>
        
      <patternset id="tasklist/pmd.files">
        <include name="${nb.modules/eager.dir}/tasklist-pmd.jar"/>
      </patternset>
      
      <path id="cp">
        <pathelement location="${nb_all}/openide/openide-13javac-workaround.jar"/>
        <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
        <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar"/>
        <pathelement path="${tasklist/api.dir}/${nb.modules/autoload.dir}/tasklist-api.jar"/>
        <pathelement path="${tasklist/core.dir}/${nb.modules/autoload.dir}/tasklist-core.jar"/>
      </path>
        
    </target>

    <target name="compile" depends="init">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}" source="1.4">
            <classpath>
                <path refid="cp"/>                
                <!-- java src model -->
                <pathelement path="../../java/srcmodel/netbeans/modules/org-openide-src.jar"/>
                <!-- pmd -->
                <path refid="pmd.cp"/>
            </classpath>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/eager.dir}"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <filter filtersfile="../version.properties"/>
        <filter token="tl.pmd.spec" value="${tl.pmd.spec}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/eager.dir}/tasklist-pmd.jar"
                manifest="manifest-subst.mf"
                basedir="src"
	        excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
	        compress="false">
        </jar>
    </target>

    <target name="netbeans" depends="jars">
        <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules/eager.dir}/tasklist-pmd.jar">
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <patternset refID="tasklist/pmd.files"/>
           </fileset>
        </genlist>
    </target>

    <target name="nbm" depends="netbeans">
        <makenbm file="tasklist-pmd.nbm"                 
                 module="${nb.modules/eager.dir}/tasklist-pmd.jar"
                 productdir="${netbeans.dest.dir}/${cluster.dir}"                 
                 homepage="http://tasklist.${homepage.base}/updates/tasklist-pmd.html"
                 distribution="http://${dist.base}/tasklist-pmd.nbm"
                 needsrestart="false">
            <license file="${license.file}"/>            
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="changelog">
        <style in="module-updates.xml" out="../www/updates/tasklist-pmd.html" style="../www/updates/updates.xsl"/>
    </target>
    
     
    <target name="release"/>
    <target name="javahelp"/>
 
    <target name="clean" depends="init">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
               <patternset refID="tasklist/pmd.files"/>
            </fileset>            
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="tasklist-pmd.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
    </target>

    <!-- This target will only work *inside* the IDE! -->
    <target name= "test" depends="jars" description="Test the module inside the running IDE." >
       <nbinstaller action="reinstall" module="netbeans/modules/eager/tasklist-pmd.jar"/>
    </target>
</project>
