<project name="jndi" default="netbeans" basedir=".">

  <property name="nbroot" location=".."/>
  <property name="binroot" location="../../nbextra"/>
  <property name="nbext" location="${nbroot}/nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>

  <taskdef name="jhindexer" classname="org.netbeans.nbbuild.JHIndexer" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="tojar" classname="org.netbeans.nbbuild.ToJar" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>

  <target name="check-classes">
    <available property="have_classes" classname="javax.naming.Context"/>
  </target>

  <target name="compile">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>        
	<pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <!--<pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>-->
        <fileset dir="${nbroot}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
	<pathelement location="${nbroot}/openidex/netbeans/modules/autoload/openidex.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/jndi.jar"
         manifest="manifest-subst.mf"
         basedir="src"
	 excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
	 compress="false">
      <locale name="ja"/>	 
    </locjar>
  </target>

  <target name="release">    
<!--    <copy todir="netbeans">
      <fileset dir="release"/>
    </copy> -->
  </target>

  <target name="netbeans" depends="jars,release,javahelp">
    <genlist targetname="nbm" outputfiledir="../nbbuild/netbeans"/>
  </target>

<target name="javahelp">
    <mkdir dir="javahelp/org/netbeans/modules/jndi/docs/JavaHelpSearch2"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/jndi/docs/"
               db="javahelp/org/netbeans/modules/jndi/docs/JavaHelpSearch2"
               jhall="${binroot}/nbbuild/lib/jhall.jar">
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch2/"/>
      <exclude name="ja/"/>
      <exclude name="credits.html"/>
    </jhindexer>
    <mkdir dir="javahelp/org/netbeans/modules/jndi/docs/ja/JavaHelpSearch2"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/jndi/docs/"
               db="javahelp/org/netbeans/modules/jndi/docs/ja/JavaHelpSearch2"
               locale="ja"
               jhall="${binroot}/nbbuild/lib/jhall.jar">
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch2/"/>
      <exclude name="ja/JavaHelpSearch2/"/>
      <exclude name="credits.html"/>
    </jhindexer>
    <mkdir dir="javahelp/org/netbeans/modules/usersguide"/>
    <copy file="${nbroot}/usersguide/javahelp/org/netbeans/modules/usersguide/ide.css" tofile="javahelp/org/netbeans/modules/usersguide/ide.css"/>
    <mkdir dir="netbeans/modules/docs"/>
    <locjar jarfile="netbeans/modules/docs/jndi.jar" compress="true">
        <fileset dir="javahelp" excludesfile="${nbext}/standard-jar-excludes.txt" excludes="org/netbeans/modules/usersguide/"/>
	<locale name="ja"/>
    </locjar>
    <delete dir="javahelp/org/netbeans/modules/jndi/docs/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/jndi/docs/ja/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/jndi/docs/ja"/>
    <!--the latter deletion assumes that there is not actually a localized help set ready-->
    </target>


  <target name="nbm" depends="netbeans">
    <makenbm file="jndi.nbm"
             topdir="."
             module="netbeans/modules/jndi.jar"
	     homepage="http://http://${homepage.base}/jndi.html"
	     distribution="http://${dist.base}/jndi.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="jndi.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
    <delete dir="javahelp/org/netbeans/modules/jndi/docs/ja/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/jndi/docs/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/jndi/docs/ja"/>
    <!--the latter deletion assumes that there is not actually a localized help set ready-->
    <delete dir="javahelp/org/netbeans/modules/usersguide"/>
  </target>

</project>

