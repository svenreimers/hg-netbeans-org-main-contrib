<!-- =========================================================================
      This file contains testbag declarations used by xtest harness runtime.
     ========================================================================= -->

<mconfig name="tasklist/core/test">
    <!-- Tests which should be run before commit to validate IDE, needs IDE mode for ValidateLayer suites -->
    <testbag testattribs="x-commit" executor="ide" name="Before Commit Validation in IDE" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable" executor="ide" name="Unit tests running in the IDE" resultsprocessor="unit">
        <testset dir="perf/src">
            <patternset>
                <include name="org/netbeans/modules/tasklist/**/*Test.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- Xtest runtime configuration -->

    <executor name="code" antfile="build-perf.xml" target="runcodetest"/>
    <executor name="ide" antfile="build-perf.xml" target="runidetest"/>
    <compiler name="unit-compiler" antfile="build-perf.xml" target="perf-compiler" default="true"/>
    <resultsprocessor name="unit" antfile="build.xml" target="test_report" default="true"/>

</mconfig>

