<!DOCTYPE orb-settings PUBLIC "-//Forte for Java//DTD ORBSettings 1.0//EN" "ORBSettings.dtd"[
<!ENTITY corba23-poa SYSTEM "corba23-poa.ent">
<!ENTITY corba23-generic-impl SYSTEM "corba23-generic-impl.ent">
]>
<orb-settings name='Orbix2000 for Java 1.x' tag='orbix20004j' supported='true'>
  
  &corba23-poa;
  &corba23-generic-impl;

  <java-template-code>
    <template-code name='ORB_PROPERTIES'>
      <![CDATA[// setting system properties is necessary to use Orbix 2000 for Java 1.0
      Properties props = System.getProperties ();
      props.put ("org.omg.CORBA.ORBClass", "com.iona.corba.art.artimpl.ORBImpl");
      props.put ("org.omg.CORBA.ORBSingletonClass", "com.iona.corba.art.artimpl.ORBSingleton");
      System.setProperties (props);]]>
    </template-code>
  </java-template-code>

  <idl-compiler-settings>
    <tie-param value=''/>
    <dir-param value='-O'/>
    <package-param value='-P'/>
    <compiler value='idl {params} -jbase:{dir_param}{package_root}:{package_param}{package} -jpoa:{dir_param}{package_root}:{package_param}{package} {files}'/>
    <package-delimiter value='.'/>
    <error-expression value='^idl: "([^ ]+)", line ([0-9]+): (.*)'/>
    <file-position value='1'/>
    <line-position value='2'/>
    <column-position value='-1'/>
    <message-position value='3'/>
    
  </idl-compiler-settings>
    
    
</orb-settings>
