
<java-template-code>
  
  <template-code name='ORB_PROPERTIES'>
    <![CDATA[// setting system properties is necessary in order to use Orbacus in Java 1.2
    Properties props = System.getProperties ();
    props.put ("org.omg.CORBA.ORBClass", "com.ooc.CORBA.ORB");
    props.put ("org.omg.CORBA.ORBSingletonClass", "com.ooc.CORBA.ORBSingleton");
    System.setProperties (props);]]>
  </template-code>
  
  <template-code name='POA_INIT'>
    <![CDATA[BOA boa = ((com.ooc.CORBA.ORB)orb).BOA_init (args, props);]]>
  </template-code>
  
  <template-code name='SERVANTS_ACTIVATION'>
    <![CDATA[]]>
  </template-code>
  
  <template-code name='ORB_SERVER_RUN'>
    <![CDATA[boa.impl_is_ready (null);]]>
  </template-code>
  
  
</java-template-code>


<server-binding name='Proprietary Binder' template-tag='SERVER_BINDING'>
  <code>
    <![CDATA[//ORBacus for Java 3.x proprietary binding
    ((com.ooc.CORBA.ORB)orb).connect(/* place here your object implementation */, "<name of your server>");]]>
  </code>
</server-binding>


<client-binding name='Proprietary Binder' template-tag='CLIENT_BINDING'>
  <code>
    <![CDATA[//ORBacus for Java 3.x proprietary client binding
    // get server object from URL
    //
    String url = "iiop://<host where the server runs>:<port where the server listens>/<name of your object implementation>";
    org.omg.CORBA.Object obj = orb.string_to_object (url);
    if (obj == null)
    throw new RuntimeException();
    // add your code here
    // something like:  <class> <name> = <class>Helper.narrow (obj);
    //                  if (<name> == null) throw RuntimeException ();]]>
  </code>
</client-binding>
    
    
