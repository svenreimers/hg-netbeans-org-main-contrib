/* Production 7 */

Vector interface_header() :
{}
{
  {    
    Vector inter = new Vector ();
    Identifier name;
    Vector inher;
  }
  "interface" name = identifier() 
  { inter.addElement (name);}
  [ ( inher = inheritance_spec() ) 
    { inter.addElement (inher);} ]
  {
    return inter;
  }
}

