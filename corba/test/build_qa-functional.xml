<project name="JNDI" basedir="." default="all">

    <property name="nb.repository" location="../.."/>
    <property name="extra.repository" location="../../../nbextra"/>
    <property name="xtest.ide.winsys" value="sdi"/>

    <target name="set_classpath" depends="idecompile-classpath"> 
    
        <property name="xtest.extra.jars.path" location="${extra.repository}/jemmy/;${extra.repository}/jellytools/;${nb.repository}/a11y/tests/"/>
        <property name="xtest.extra.jars"     value="a11y.jar"/>
        <property name="xtest.extra.jars.ide" value="jemmy.jar;jelly2-nb.jar"/>
        <property name="compile.srcdir" value="qa-functional/src"/>
        <property name="xtest.ide.commandline.suffix" value=""/>
	<property name="compiletest.classpath" refid="compiletest.classpath"/>
        
</target>
    
    <target name="runidetest" depends="set_classpath">
        <ant dir="." antfile="${xtest.module_harness.antfile}"
             target="test">
           <property name="xtest.exectype" value="ide"/>
		   <property name="xtest.userdata|OPEN1X_DIR" location="${extra.repository}/qa/corba/resources/"/>
        </ant>
    </target>
    
    <target name="runcodetest" depends="set_classpath">
        <ant dir="." antfile="${xtest.module_harness.antfile}"
             target="test">
           <property name="xtest.exectype" value="code"/>
        </ant>
    </target>
       
    <target name="default-compiler" depends="set_classpath">
       <ant dir="." antfile="${xtest.module_harness.antfile}"
             target="buildtests">
           <property name="compile.excludes" value="**/data/**"/>
       </ant>
    </target>

    <target name="idecompile-classpath"> 
        <echo message="Using IDE classpath for compilation."/>
    	<path id="compiletest.classpath">          
           <pathelement location="${xtest.home}/lib/openide-13javac-workaround.jar"/>
	       <pathelement location="${netbeans.home}/lib/openide.jar"/>
	       <pathelement location="${netbeans.home}/modules/properties.jar"/>
	       <pathelement location="${netbeans.home}/modules/corba.jar"/>
	       <pathelement location="${netbeans.home}/modules/java.jar"/>
	       <pathelement location="${netbeans.home}/modules/autoload/java-src-model.jar"/>
        </path>
    </target>

</project>

