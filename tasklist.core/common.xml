<project name="tasklist/core/common" basedir=".">
    <target name="changelog" depends="init">
        <style in="module-updates.xml" out="../www/updates/${code.name.base.dashes}.html" 
            style="../www/updates/updates.xsl"/>
    </target>
    
    <target name="pmd-check">
        <taskdef name="pmd" classname="net.sourceforge.pmd.ant.PMDTask">
            <classpath>
                <fileset dir="C:\Programme\pmd-2.0\lib\">
                    <include name="*.jar"></include>
                </fileset>
            </classpath>
        </taskdef>
        <pmd printtoconsole="true" shortfilenames="true"  
            rulesetfiles="rulesets/imports.xml,
                rulesets/unusedcode.xml,
                rulesets/basic.xml">
            <formatter type="text" tofile="pmd_report.txt"/>
            <fileset dir="src">
                <include name="**/*.java"/>
            </fileset>
        </pmd>
    </target>
    
    <target name="checkstyle-check">
        <taskdef resource="checkstyletask.properties"
            classpath="C:\Programme\checkstyle-3.5\checkstyle-all-3.5.jar"/>
        <property name="checkstyle.suppressions.file"
            value="C:\Programme\checkstyle-3.5\suppressions.xml"/>
        <checkstyle config="C:\Programme\checkstyle-3.5\sun_checks.xml">
            <fileset dir="src" includes="**/*.java"/>
        </checkstyle>
    </target>
</project>
