<project name="tasklist/core" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <!-- XXX currently this target is not called, so this file is not in the build... delete target or add <target name="netbeans-extra" depends="native"/> -->
    <target name="native">
        <mkdir dir="${cluster}/modules/lib"/>
        <copy file="native/libtasklist_bgthreads.so" todir="${cluster}/modules/lib"/>
    </target>

    <target name="changelog">
        <style in="module-updates.xml" out="../www/updates/tasklist-core.html" 
            style="../www/updates/updates.xsl"/>
    </target>
    
    <target name="pmd-check">
        <taskdef name="pmd" classname="net.sourceforge.pmd.ant.PMDTask">
            <classpath>
                <fileset dir="C:\Programme\pmd-2.0\lib\">
                    <include name="*.jar"></include>
                </fileset>
            </classpath>
        </taskdef>
        <pmd printtoconsole="true" shortfilenames="true"  
            rulesetfiles="rulesets/imports.xml,
                rulesets/unusedcode.xml,
                rulesets/basic.xml">
            <formatter type="text" tofile="pmd_report.txt"/>
            <fileset dir="src">
                <include name="**/*.java"/>
            </fileset>
        </pmd>
    </target>

</project>
