<project name="contrib/naming" default="netbeans" basedir=".">
    <import file="../../nbbuild/default.xml"/> 

    <target name="init" depends="default.init">
        <patternset id="naming.files">
            <include name="${nb.modules/autoload.dir}/naming.jar"/>
        </patternset>
        <path id="cp">
            <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
            <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar"/>
        </path>
    </target>
    
    <target name="compile" depends="init">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath refid="cp"/>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/naming.jar"
                basedir="src"
                manifest="manifest-subst.mf"
                excludesfile="../../nbbuild/standard-jar-excludes.txt"
                compress="false">
        </jar>
    </target>

    <target name="netbeans" depends="jars">
        <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules/autoload.dir}/naming.jar">
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <include name="${nb.modules/autoload.dir}/naming.jar"/>
         </fileset>
        </genlist>
    </target>

    <target name="nbm" depends="netbeans">
        <makenbm file="naming.nbm"
                 productdir="${netbeans.dest.dir}/${cluster.dir}"
                 module="${nb.modules/autoload.dir}/naming.jar"
                 homepage="http://contrib.${homepage.base}/"
                 distribution="http://${dist.base}/naming.nbm">
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="test-build" depends="jars">
        <mkdir dir="reload/ext"/>
        <copy file="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/naming.jar" tofile="reload/naming.jar"/>
    </target>
    <target name="test" depends="test-build">
        <nbinstaller module="reload/naming.jar" action="reinstall"/>
    </target>

    <target name="clean" depends="init" description="Clean build products.">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <patternset refID="naming.files"/>
            </fileset>
        </delete>
        <delete dir="netbeans"/>
        <delete>
	    <fileset dir=".">
		<include name="*.nbm"/>
	    </fileset>
	</delete>
        <delete dir="Info"/>
        <delete file="manifest-subst.mf"/>
        <delete dir="javadoc"/>
    </target>

    <target name="real-clean" depends="clean">
        <delete dir="reload"/>
    </target>

    <target name="javadoc" description="Build Javadoc.">
        <ant dir="${nb_all}/nbbuild/javadoctools" antfile="template.xml" target="javadoc">
            <property name="javadoc.base" location="."/>
            <property name="javadoc.name" value="NamingAPI"/>
            <property name="javadoc.title" value="Naming API"/>
            <property name="javadoc.packages" value="org.netbeans.api.naming"/>
            <property name="javadoc.classpath" refid="cp"/>
        </ant>
    </target>
  
</project>
