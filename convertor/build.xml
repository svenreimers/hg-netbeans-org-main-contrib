<project name="openide/convertor" default="netbeans" basedir=".">

    <import file="../../../nbbuild/templates/projectized.xml"/>

    <!-- unit test data which must be build before test execution -->
    <property name="testmodules" location="${basedir}/test/unit/src/org/netbeans/api/convertor/data"/>

    <target name="clean" depends="projectized-common.clean">
        <!-- clean up test data -->
        <ant antfile="${testmodules}/build.xml" dir="${testmodules}" target="clean"/>
     </target>

    <target name="test-build" depends="init,test-init,jar">
        <mkdir dir="${build.test.unit.classes.dir}"/>
        <!-- build test data -->
        <ant antfile="${testmodules}/build.xml" dir="${testmodules}" target="all"/>
        <!-- XXX should perhaps use a dep on projectized-common.test-build rather than antcall -->
        <antcall target="projectized-common.test-build" inheritRefs="true"/>
    </target>
    
</project>
