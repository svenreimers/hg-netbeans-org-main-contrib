<project name="tasklist/usertasks" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="nbm" depends="init,netbeans" description="Build NBM archive.">
        <mkdir dir="build"/>
        <property name="nbm.target.cluster" value=""/> <!-- fallback -->
        <makenbm file="build/${nbm}"
                 productdir="${cluster}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="http://${dist.base}/${nbm}"
                 needsrestart="${nbm.needs.restart}"
                 releasedate="${nbm.release.date}"
		 moduleauthor="${nbm.module.author}"
                 global="${nbm.is.global}"
                 targetcluster="${nbm.target.cluster}">
            <license>
                <text>For the User Tasks module itself:</text>
                <file location="${license.file}"/>
                <text>For the bundled JCalendar runtime library:</text>
                <file location="../external/jcalendar-license.txt"/>
                <text>For the bundled iCal4j library:</text>
                <file location="../external/ical4j-license.txt"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>
    
    <target name="netbeans-extra" depends="release"/>

    <target name="release" depends="init">
        <mkdir dir="${cluster}/modules/ext"/>
        <copy todir="${cluster}/modules/ext">
            <fileset dir="../external/">
                <include name="jcalendar*.jar"/>
                <include name="ical4j.jar"/>
            </fileset>
        </copy>
    </target>
    
    <target name="changelog">
    </target>
    
    <target name="pmd-check">
        <taskdef name="pmd" classname="net.sourceforge.pmd.ant.PMDTask">
            <classpath>
                <fileset dir="C:\Programme\pmd-2.0\lib\">
                    <include name="*.jar"></include>
                </fileset>
            </classpath>
        </taskdef>
        <pmd printtoconsole="true" shortfilenames="true"  
            rulesetfiles="rulesets/imports.xml,
                rulesets/unusedcode.xml,
                rulesets/basic.xml">
            <formatter linkprefix="src/" type="html" tofile="pmd-report.html"/>
            <fileset dir="src">
                <include name="**/*.java"/>
            </fileset>
        </pmd>
    </target>

</project>
