<!-- =========================================================================
      This file contains testbag declarations used by xtest harness runtime.
     ========================================================================= -->

<mconfig name="User Tasks QA functional test config">
    <!-- Tests which should be run before commit to validate IDE, needs IDE mode for ValidateLayer suites -->
    <testbag testattribs="x-commit" executor="ide" name="Before Commit Validation in IDE">
        <testset dir="qa-functional/src">
            <patternset>
            </patternset>
        </testset>
    </testbag>
  
    <testbag testattribs="x-stable" executor="ide" name="QA functional tests running in the IDE">
        <testset dir="qa-functional/src">
            <patternset>
           </patternset>
        </testset>
    </testbag>

   <testbag testattribs="stable" executor="ide" name="QA functional tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/modules/tasklist/usertasks/test/TestTable.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="x-failing" executor="code" name="Failing QA functional tests running in the IDE">
        <testset dir="qa-functional/src">
            <patternset>
            </patternset>
        </testset>
    </testbag>

    <!-- Xtest runtime configuration -->
 
    <executor name="code" antfile="build-qa-functional.xml" target="runcodetest"/>    
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest"/>
    <compiler name="unit-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
</mconfig>

