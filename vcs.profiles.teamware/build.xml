<project name="vcsgeneric/profiles/teamware" default="netbeans" basedir=".">
  <import file="../../../nbbuild/default.xml"/>
    
  <taskdef name="makelayer" classname="org.netbeans.nbbuild.MakeLayer" classpath="${nb_all}/nbbuild/nbantext.jar"/>
  <taskdef name="createmodulexml" classname="org.netbeans.nbbuild.CreateModuleXML" classpath="${nb_all}/nbbuild/nbantext.jar"/>
  
  <property name="teamware.jar" value="org-netbeans-modules-vcs-profiles-teamware.jar"/>
  
  <target name="init" depends="default.init">
    <patternset id="vcsgeneric/profiles/teamware.files">
      <include name="${nb.modules.dir}/${teamware.jar}"/>
    </patternset>
    <path id="cp">
      <pathelement location="${diff.dir}/${nb.modules.dir}/org-netbeans-modules-diff.jar"/>
      <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
      <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar"/>
      <pathelement location="${openidex.dir}/${nb.modules.dir}/org-openidex-util.jar"/>
      <pathelement location="${vcscore.dir}/${nb.modules.dir}/org-netbeans-modules-vcscore.jar"/>
      <pathelement location="${vcsgeneric.dir}/${nb.modules.dir}/vcsgen.jar"/>
    </path>
  </target>

  <target name="compile" depends="init">
    <!-- <echo message="basedir = ${basedir}, nbroot1 = ${nbroot1}"/> -->
    <javac srcdir="src" 
        deprecation="${build.compiler.deprecation}" 
        debug="${build.compiler.debug}"
        source="1.4"
        target="1.4"
        destdir="src">
      <classpath refID="cp"/>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <makelayer topdir="src" destfile="src/org/netbeans/modules/vcs/profiles/teamware/layer-includes-config.xml" absolutepath="true">
       <include name="org/netbeans/modules/vcs/profiles/teamware/config/*.xml"/>
    </makelayer>
    <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}"/>

    <!-- Provide a default value for buildnumber -->
    <propertyfile file="build.number.properties">
        <entry key="teamware.build.number" type="int" operation="+" default="0"/>
    </propertyfile>
    <property file="build.number.properties"/>
    <property name="buildnumber" value="0.2.${teamware.build.number}"/>
    
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/${teamware.jar}"
         manifest="manifest-subst.mf"
         compress="false">
      <fileset dir="src/" excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt">
        <include name="**/*"/>
      </fileset>
    </jar>
    <createmodulexml xmldir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules">
      <enabled dir="${netbeans.dest.dir}/${cluster.dir}">
        <include name="${nb.modules.dir}/${teamware.jar}"/>
      </enabled>
    </createmodulexml>
  </target>

  <target name="netbeans" depends="jars">
    <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules.dir}/${teamware.jar}">
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="vcsgeneric/profiles/teamware.files"/>
      </fileset>
    </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="teamware-profile.nbm"
             productdir="${netbeans.dest.dir}/${cluster.dir}"
             module="${nb.modules.dir}/${teamware.jar}"
	     homepage="http://vcsgeneric.${homepage.base}/"
	     distribution="http://${dist.base}/teamware-profile.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>
  
  <target name="reload" depends="jars">
    <mkdir dir="module-test"/>
    <copy file="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/${teamware.jar}"
        tofile="module-test/${teamware.jar}"/>
    <nbinstaller module="module-test/${teamware.jar}" action="reinstall"/>
  </target>
  
  <target name="test">
    <ant dir="test" target="cleanresults"/>
    <ant dir="test"/>
  </target>

  <target name="clean" depends="init">
    <delete failonerror="true">
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
        <include name="org/netbeans/modules/vcs/profiles/teamware/layer-include*.xml"/>
      </fileset>
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="vcsgeneric/profiles/teamware.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="teamware-profile.nbm"/>
  </target>

</project>
