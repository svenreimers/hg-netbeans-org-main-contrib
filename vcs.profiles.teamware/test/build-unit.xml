<project name="vcsgeneric/profiles/teamware/test-unit" basedir="." default="all">

    <property file="user.build.properties"/>
    <property file="build.properties"/>

    <!-- Imports default default-compiler and run-unit-test executor. -->
    <import file="../../../../nbbuild/templates/xtest-unit.xml"/>
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!-- This target is executed by XTest  -->
    <!-- Name of this task is defined in cfg-xxx.xml -->
    <!-- This target executes tests inside IDE -->
    <target name="runidetest">
        <fail unless="sccs">

You need to define the location of the sccs executable in the "sccs"
property.
        </fail>
        <property name="data.dir" location="data"/>
        <propertyfile file="${xtest.tmpdir}/test.properties">
            <entry key="sccs" value="${sccs}"/>
            <entry key="data.dir" value="${data.dir}"/>
        </propertyfile>
        <executeTests  pluginName="ide" classpath="../src" testMode="testbag"/>
    </target>

</project>



