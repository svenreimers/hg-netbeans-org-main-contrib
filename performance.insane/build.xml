<project name="performance-insane" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="compile-cli" depends="init">
        <mkdir dir="build/cliclasses"/>
        <javac srcdir="clisrc" destdir="build/cliclasses" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}" source="1.4">
            <classpath path="${cp.cli}"/>
        </javac>
        <copy todir="build/cliclasses">
            <fileset dir="clisrc" excludes="${jar-excludes}"/>
        </copy>
    </target>

    <target name="jar-cli" depends="init,compile-cli">
        <mkdir dir="${cluster}/core" />
        <jar jarfile="${cluster}/core/org-netbeans-modules-performance-insane-cli.jar">
            <fileset dir="build/cliclasses"/>
        </jar>
    </target>

    <target name="compile-lib" depends="init">
        <echo message="Building library..."/>
        <ant dir="../insanelib" target="jar" inheritAll="false"/>
        <copy file="../insanelib/dist/insanelib.jar" todir="${cluster}/modules/ext" />
    </target>

    <target name="clean-lib">
        <echo message="Cleaning library..."/>
        <ant dir="../insanelib" target="clean" inheritAll="false"/>
    </target>
    
    <target name="compile" depends="compile-lib,jar-cli,projectized-common.compile"/>

    <target name="netbeans-extra" depends="jar-cli"/>

    <target name="clean" depends="clean-lib,projectized-common.clean"/>

</project>
