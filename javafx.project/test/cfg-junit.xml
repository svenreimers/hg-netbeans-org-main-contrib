<mconfig name="JavaFX JUnit test config">
    

    <testbag testattribs="all,unit,editor" executor="jvm" compiler="jvm-compiler-editor" name="JavaFX Editor Unit Tests">
        <testset dir="../../editor/test/unit/src">
            <patternset>

                <include name="**/editor/**"/>
                <include name="**/lexer/**"/>
                <include name="**/parser/**"/>


                <exclude name="**/util/**"/>
                <exclude name="**/TestCompilationInfo.class"/>
                <exclude name="**/BaseDocumentUnitTestCase.class"/>
                <exclude name="**/JavaFXBaseDocumentUnitTestCase.class"/>
                <exclude name="**/JavaFXFormatterUnitTestCase.class"/>


            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all,unit,project" executor="jvm" compiler="jvm-compiler" name="JavaFX Project Unit Tests">
        <testset dir="unit/src">
            <patternset>

                <include name="**/project/**"/>
                <exclude name="**/CreateJavaFXProjectTest*"/>
                <exclude name="**/TestUtil.class"/>
                <exclude name="**/MockLookup.class"/>


            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all,unit,project" executor="ide" compiler="jvm-compiler" name="JavaFX Project Unit Tests">
        <testset dir="unit/src">
            <patternset>

                <include name="**/CreateJavaFXProjectTest*"/>

            </patternset>
        </testset>
    </testbag>


    <testbag testattribs="all,ide,smoke" executor="ide" compiler="ide-compiler" name="JavaFX Smoke Tests">
        <testset dir="../../test/qa-functional/src">
            <patternset>

                <include name="**/smoke/JavaFXSmokeTest.*"/>

            </patternset>
        </testset>
    </testbag>


    <executor name="jvm" antfile="build-junit.xml" target="run_tests_in_jvm"/>
    <executor name="ide" antfile="build-junit.xml" target="runidetest" default="true"/>
    <compiler name="ide-compiler" default="true" antfile="build-junit.xml" target="ide-compiler"/>
    <compiler name="jvm-compiler-editor" antfile="build-junit.xml" target="jvm-compiler-editor"/>
    <compiler name="jvm-compiler" antfile="build-junit.xml" target="jvm-compiler"/>
  


</mconfig>


