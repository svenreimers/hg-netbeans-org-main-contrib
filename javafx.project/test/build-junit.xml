<project name="javafx/test-junit" basedir="." default="all">
    <!-- Imports default qa-functional-compiler and runidetest executor.
        jemmy and jellytools jars are on classpath for both. -->
    <import file="../../../nbbuild/templates/xtest-qa-functional.xml"/>


   <path id="run.extra.ide">
        <pathelement location="../../../jemmy/builds/jemmy.jar"/>                    
        <pathelement location="../../../jellytools/builds/jelly2-nb.jar"/>
        <pathelement location="${xtest.home}/lib/junit.jar"/>                    
        <pathelement location="${xtest.home}/lib/nbjunit.jar"/> 

    </path>   


   <path id="run.extra.jvm">

        <fileset dir="${netbeans.dest.dir}/${javafx.cluster.name}"> <include name="**/*.jar"/> </fileset>        
        <fileset dir="${netbeans.dest.dir}/platform7"> <include name="**/*.jar"/> </fileset>        
        <fileset dir="${netbeans.dest.dir}/ide8"> <include name="**/*.jar"/> </fileset>        
        <fileset dir="${netbeans.dest.dir}/java1"> <include name="**/*.jar"/> </fileset>        

        <fileset dir="${netbeans.dest.dir}/java1"> <include name="**/*.jar"/> </fileset>        

        <pathelement path="../../test/lib/tests-unit.jar"/>
        <pathelement path="../../../performance/insanelib/dist/insanelib.jar"/>

        <pathelement path="${netbeans.dest.dir}/ruby1/modules/org-netbeans-api-gsf.jar"/>
        <pathelement path="${netbeans.dest.dir}/ruby1/modules/org-netbeans-modules-gsf.jar"/>



    </path>   


    <target name="ide-compiler">
        <echo message="**** IDE Compiler  ***"/>

        <buildTests srcDir="../../test/qa-functional/src"> 
            <classpath refid="run.extra.ide"/>
        </buildTests>

    </target>

    <target name="jvm-compiler">
        <echo message="**** JVM Compiler  ***"/>

        <buildTests srcDir="unit/src"> 
            <classpath refid="run.extra.jvm"/>
        </buildTests>
    </target>

    <target name="jvm-compiler-editor">
        <echo message="**** JVM Compiler  ***"/>

        <buildTests srcDir="../../editor/test/unit/src"> 
            <classpath refid="run.extra.jvm"/>
        </buildTests>
    </target>


   <target name="run_tests_in_jvm">

       <echo message="xtest data=${xtest.data}"/>

       <copy todir="${xtest.data}"> <fileset dir="./../../editor/test/unit/data"/> </copy>

       <!--unzip src="" dest="${tools.home}"/-->

       <executeTests  pluginName="jvm">
            <classpath refid="run.extra.jvm"/>
       </executeTests>
   </target>   

   
</project>