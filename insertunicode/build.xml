<project default="netbeans">
    <property name="license.file" value="../../nbbuild/standard-nbm-license.txt"/>

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>

    <target name="init">
        <ant dir="external" target="unscramble"/>
    </target>

    <target name="compile">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath>
                <pathelement location="../../openide/openide-13javac-workaround.jar"/>
                <fileset dir="../../openide/netbeans/lib">
                    <include name="openide*.jar" />
                </fileset>
            </classpath>
        </javac>
    </target>

    <target name="jars" depends="compile,init">
        <gunzip src="external/uni-names.txt.gz" dest="src/org/netbeans/modules/insertunicode/uni-names.txt"/>
        <mkdir dir="netbeans/modules"/>
        <jar jarfile="netbeans/modules/insertunicode.jar"
             manifest="manifest.mf"
             basedir="src"
	     excludesfile="../../nbbuild/standard-jar-excludes.txt"
             compress="false"/>
  </target>
  
    <target name="netbeans" depends="jars"/>
 
    <target name="nbm" depends="netbeans">
        <makenbm file="insertunicode.nbm"
                 topdir="."
                 module="netbeans/modules/insertunicode.jar"
                 needsrestart="false">
            <license name="insertunicode-license.txt">
                <text>For the module itself:</text>
                <file location="${license.file}"/>
                <text>For the included Unicode naming data:</text>
                <file location="external/UNIDATA-LICENSE.txt"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="nb_ide"/>
        </makenbm>
    </target>

    <target name="clean">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
                <include name="org/netbeans/modules/insertunicode/uni-names.txt"/>
            </fileset>
        </delete>
        <delete file="insertunicode.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
    </target>

</project>
