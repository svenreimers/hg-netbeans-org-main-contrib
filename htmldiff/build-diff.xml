<project default="all" name="Build Differences Between NetBeans APIs">
    <property name="new-nb" location="sources/new" />
    <property name="new-javadoc" location="${new-nb}/nbbuild/modules_javadoc" />
    <property name="old-nb" location="sources/old" /> 
    <property name="old-javadoc" location="${old-nb}/nbbuild/modules_javadoc" />
    
    <property name="netbeans.no.pre.unscramble" value="true" />
    
    <target name="new-co" description="Checkouts the sources for the current version" >
        <cvs 
            dest="${new-nb}"
            cvsRoot=":pserver:anoncvs@cvs.netbeans.org:/cvs"
            compressionlevel="3" 
            package="diff editor libs xml autoupdate java/srcmodel java/arch debuggercore/oldapi debuggercore/arch"
        />
        <cvs 
            dest="${new-nb}"
            cvsRoot=":pserver:anoncvs@cvs.netbeans.org:/cvs"
            compressionlevel="3" 
            tag="winsys_29836"
            package="nbbuild openide core"
        />
    </target>
    
    <target name="old-co" description="Checkouts the sources for the old version" >
    <!--
        <cvs 
            dest="${old-nb}"
            tag="release35"
            cvsRoot=":pserver:anoncvs@cvs.netbeans.org:/cvs"
            compressionlevel="3" 
            package="nbbuild openide core libs xml autoupdate java/srcmodel java/arch debuggercore/oldapi debuggercore/arch"
        /> -->
        <patch patchfile="patch35.diff" dir="${old-nb}" strip="0" />
    </target>
    
    <target name="new-javadoc" description="Builds javadoc for new version" >
        <ant dir="${new-nb}/nbbuild" target="build-javadoc" >
            <property name="fixedmodules" value="
                openide, 
                openide/compiler,
                openide/execution,
                openide/io,
                openide/deprecated,
                openide/loaders,
                core/javahelp,
                core/settings"
             />
            <property name="modules" value="
                java/srcmodel,
                autoupdate,
                debuggercore/oldapi" 
            />
        </ant>
    </target>
    
    <target name="old-javadoc" description="Builds javadoc for old version" >
        <ant dir="${old-nb}/nbbuild" target="build-javadoc" >
            <property name="fixedmodules" value="
                openide, 
                openide/compiler,
                openide/execution,
                openide/io,
                openide/deprecated,
                core/javahelp,
                core/settings"
             />
<!--                openide/loaders, -->
            <property name="modules" value="
                java/srcmodel,
                autoupdate,
                debuggercore/oldapi" 
            />
        </ant>
    </target>
    
    
    <target name="compile">
          <ant dir="${new-nb}/nbbuild" >
            <param name="modules=diff" />
          </ant>
          <ant dir="${new-nb}/diff" />
    	  <ant dir="." />
    </target>

    <target name="api-list"  >
        <style 
            in="${new-javadoc}/index.xml" 
            out="list.html" 
            style="export2html.xsl"
        />
    </target>
    
    <target name="diff" depends="compile, api-list" >
        <java classname="org.netbeans.modules.htmldiff.DiffPages" fork="yes" >
             <jvmarg value="-Xmx512m" />
             <arg value="${old-javadoc}" /> 
             <arg value="${new-javadoc}" />
             <arg value="list.html" />
             <arg value="diff" />
             <classpath>
                  <pathelement location="${new-nb}/diff/netbeans/modules/diff.jar" />
                  <pathelement location="${new-nb}/openide/netbeans/lib/openide.jar" />
                  <pathelement location="netbeans/modules/eager/htmldiff.jar" />
             </classpath>
        </java>    
    </target>
    
    <target name="all" depends="api-list, diff" />

    <target name="clean" >
        <delete dir="diff" />
        <delete file="list.html" />
    </target>    
</project>
