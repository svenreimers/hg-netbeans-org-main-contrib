<project name="org.netbeans.modules.dictionary_en" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.dictionary_en.</description>
    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="init" depends="projectized.init,prepare-wordlist">
        <copy file="ext/ispell-enwl-3.1.20.zip" todir="${cluster}/modules/dict"/>
    </target>

    <available file="ext/ispell-enwl-3.1.20.zip" property="download-wordlist"/>
    
    <target name="-download-wordlist" unless="download-wordlist">
        <mkdir dir="ext"/>
        <get dest="ext/ispell-enwl-3.1.20.zip" src="http://prdownloads.sourceforge.net/wordlist/ispell-enwl-3.1.20.zip"/>
    </target>
    
    <target name="prepare-wordlist" depends="-download-wordlist" unless="has-wordlist">
        <mkdir dir="ext"/>
    </target>

    <target name="nbm" depends="init,netbeans,-nbm-prompt-for-storepass,-download-wordlist" description="Build NBM archive.">
        <mkdir dir="build"/>
        <unzip src="ext/ispell-enwl-3.1.20.zip" dest="build">
            <patternset>
                <include name="README"/>
            </patternset>
        </unzip>
        <property name="nbm.target.cluster" value=""/> <!-- fallback -->
        <makenbm file="build/${nbm}"
                 productdir="${cluster}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="${nbm.distribution}"
                 needsrestart="${nbm.needs.restart}"
                 global="${nbm.is.global}"
                 targetcluster="${nbm.target.cluster}"
                 releasedate="${nbm.release.date}"
                 moduleauthor="${nbm.module.author}">
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
            <license>
                <text>This module integrates Ispell (ver 3.1.20) word list.

License for the module itself:</text>
                <file location="${license.file}"/>
                <text>The word list license is:</text>
                <file location="build/README"/>
            </license>
        </makenbm>
    </target>

</project>
